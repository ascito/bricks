{
    "id": "drawer",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Panneau coulissant depuis les bords (menu mobile, filtres, panier)",
    "inputs": {
        "type": "object",
        "properties": {
            "position": {
                "type": "string",
                "enum": [
                    "left",
                    "right",
                    "top",
                    "bottom"
                ],
                "default": "left",
                "description": "Position du drawer"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "full"
                ],
                "default": "md",
                "description": "Largeur\/hauteur du drawer"
            },
            "title": {
                "type": "string",
                "description": "Titre du drawer (header)"
            },
            "trigger": {
                "type": "string",
                "description": "Sélecteur CSS du bouton déclencheur"
            },
            "open": {
                "type": "boolean",
                "default": false,
                "description": "État initial ouvert"
            },
            "overlay": {
                "type": "boolean",
                "default": true,
                "description": "Afficher un overlay derrière"
            },
            "closeOnOverlay": {
                "type": "boolean",
                "default": true,
                "description": "Fermer au clic sur l'overlay"
            },
            "closeOnEscape": {
                "type": "boolean",
                "default": true,
                "description": "Fermer avec Escape"
            },
            "showClose": {
                "type": "boolean",
                "default": true,
                "description": "Afficher le bouton fermer"
            },
            "persistent": {
                "type": "boolean",
                "default": false,
                "description": "Drawer persistant (ne ferme pas au clic extérieur)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML (requis pour trigger)"
            }
        },
        "required": [],
        "slots": {
            "header": {
                "description": "Contenu de l'en-tête (après le titre)"
            },
            "children": {
                "description": "Contenu principal du drawer"
            },
            "footer": {
                "description": "Contenu du pied de page"
            }
        }
    },
    "tags": [
        "ui",
        "composite",
        "drawer",
        "sidebar",
        "panel",
        "overlay",
        "mobile",
        "navigation"
    ],
    "examples": [
        {
            "name": "Drawer menu mobile",
            "inputs": {
                "id": "mobile-menu",
                "position": "left",
                "size": "sm",
                "title": "Menu"
            }
        },
        {
            "name": "Drawer filtres (droite)",
            "inputs": {
                "id": "filters-drawer",
                "position": "right",
                "size": "md",
                "title": "Filtres"
            }
        },
        {
            "name": "Drawer panier",
            "inputs": {
                "id": "cart-drawer",
                "position": "right",
                "size": "lg",
                "title": "Votre panier",
                "showClose": true
            }
        },
        {
            "name": "Drawer notification (bottom)",
            "inputs": {
                "id": "notification-drawer",
                "position": "bottom",
                "size": "sm",
                "overlay": false
            }
        }
    ]
}