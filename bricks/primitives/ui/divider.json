{
    "id": "divider",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Ligne de séparation horizontale ou verticale avec texte optionnel",
    "inputs": {
        "type": "object",
        "properties": {
            "variant": {
                "type": "string",
                "enum": [
                    "solid",
                    "dashed",
                    "dotted",
                    "gradient"
                ],
                "default": "solid",
                "description": "Style de la ligne"
            },
            "orientation": {
                "type": "string",
                "enum": [
                    "horizontal",
                    "vertical"
                ],
                "default": "horizontal"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md",
                "description": "Épaisseur de la ligne"
            },
            "color": {
                "type": "string",
                "enum": [
                    "gray",
                    "light",
                    "dark",
                    "primary",
                    "custom"
                ],
                "default": "gray",
                "description": "Couleur du divider"
            },
            "customColor": {
                "type": "string",
                "description": "Couleur CSS personnalisée (si color=custom)"
            },
            "label": {
                "type": "string",
                "description": "Texte optionnel au centre du divider"
            },
            "labelPosition": {
                "type": "string",
                "enum": [
                    "start",
                    "center",
                    "end"
                ],
                "default": "center",
                "description": "Position du label"
            },
            "spacing": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md",
                "description": "Marge autour du divider"
            },
            "width": {
                "type": "string",
                "enum": [
                    "full",
                    "3\/4",
                    "1\/2",
                    "1\/4"
                ],
                "default": "full",
                "description": "Largeur du divider (horizontal seulement)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "separator",
        "divider",
        "hr",
        "spacer"
    ],
    "examples": [
        {
            "name": "Divider simple",
            "description": "Ligne de séparation basique",
            "inputs": []
        },
        {
            "name": "Divider avec label",
            "description": "Séparateur avec texte au centre",
            "inputs": {
                "label": "ou",
                "variant": "solid",
                "color": "gray"
            }
        },
        {
            "name": "Divider dashed primary",
            "description": "Ligne pointillée colorée",
            "inputs": {
                "variant": "dashed",
                "color": "primary",
                "spacing": "lg"
            }
        },
        {
            "name": "Divider section",
            "description": "Séparation de section avec texte",
            "inputs": {
                "label": "Continuer",
                "labelPosition": "center",
                "variant": "gradient",
                "spacing": "xl"
            }
        },
        {
            "name": "Divider réduit",
            "description": "Divider court centré",
            "inputs": {
                "width": "1\/4",
                "size": "lg",
                "color": "primary"
            }
        }
    ]
}