{
    "id": "search-input",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Champ de recherche avec icône, suggestions et raccourci clavier optionnel.",
    "inputs": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "Nom du champ pour le formulaire",
                "default": "search"
            },
            "placeholder": {
                "type": "string",
                "default": "Rechercher..."
            },
            "value": {
                "type": "string",
                "nullable": true
            },
            "action": {
                "type": "string",
                "description": "URL du formulaire (si vide, pas de formulaire)",
                "nullable": true
            },
            "method": {
                "type": "string",
                "enum": [
                    "GET",
                    "POST"
                ],
                "default": "GET"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "filled",
                    "outlined",
                    "minimal"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "showClear": {
                "type": "boolean",
                "description": "Afficher le bouton de réinitialisation",
                "default": true
            },
            "showShortcut": {
                "type": "boolean",
                "description": "Afficher le raccourci clavier (Ctrl+K ou ⌘K)",
                "default": false
            },
            "suggestions": {
                "type": "array",
                "description": "Liste de suggestions prédéfinies",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string",
                            "nullable": true
                        },
                        "icon": {
                            "type": "string",
                            "nullable": true
                        },
                        "category": {
                            "type": "string",
                            "nullable": true
                        }
                    }
                },
                "default": []
            },
            "autofocus": {
                "type": "boolean",
                "default": false
            },
            "fullWidth": {
                "type": "boolean",
                "default": true
            },
            "rounded": {
                "type": "boolean",
                "description": "Coins arrondis (pill shape)",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "search",
        "input",
        "form",
        "autocomplete",
        "suggestions"
    ],
    "examples": [
        {
            "name": "Recherche simple",
            "inputs": {
                "placeholder": "Rechercher une formation...",
                "action": "\/search"
            }
        },
        {
            "name": "Avec raccourci clavier",
            "inputs": {
                "placeholder": "Rechercher...",
                "showShortcut": true,
                "variant": "outlined"
            }
        },
        {
            "name": "Avec suggestions",
            "inputs": {
                "placeholder": "Que cherchez-vous ?",
                "variant": "filled",
                "rounded": true,
                "suggestions": [
                    {
                        "label": "Formation Laravel",
                        "category": "Formations"
                    },
                    {
                        "label": "Formation React",
                        "category": "Formations"
                    },
                    {
                        "label": "Contact",
                        "category": "Pages"
                    },
                    {
                        "label": "Tarifs",
                        "category": "Pages"
                    }
                ]
            }
        }
    ]
}