{
    "id": "textarea",
    "version": "1.0.0",
    "category": "form.primitive",
    "description": "Zone de texte multiligne avec auto-resize optionnel et compteur de caractères",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "value",
            "attribute": "data-value",
            "type": "string"
        },
        "properties": {
            "name": {
                "type": "string",
                "description": "Nom du champ (attribut name)"
            },
            "value": {
                "type": "string",
                "default": "",
                "description": "Valeur initiale."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding (ex: user.bio). Génère data-value avec le chemin."
            },
            "placeholder": {
                "type": "string",
                "description": "Texte indicatif"
            },
            "rows": {
                "type": "integer",
                "default": 4,
                "description": "Nombre de lignes visibles"
            },
            "minRows": {
                "type": "integer",
                "description": "Nombre minimum de lignes (auto-resize)"
            },
            "maxRows": {
                "type": "integer",
                "description": "Nombre maximum de lignes (auto-resize)"
            },
            "autoResize": {
                "type": "boolean",
                "default": false,
                "description": "Redimensionnement automatique selon le contenu"
            },
            "maxLength": {
                "type": "integer",
                "description": "Nombre max de caractères"
            },
            "showCount": {
                "type": "boolean",
                "default": false,
                "description": "Afficher le compteur de caractères"
            },
            "resize": {
                "type": "string",
                "enum": [
                    "none",
                    "vertical",
                    "horizontal",
                    "both"
                ],
                "default": "vertical"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "filled",
                    "outlined"
                ],
                "default": "default"
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "readonly": {
                "type": "boolean",
                "default": false
            },
            "required": {
                "type": "boolean",
                "default": false
            },
            "error": {
                "type": "string",
                "description": "Message d'erreur"
            },
            "hint": {
                "type": "string",
                "description": "Texte d'aide"
            },
            "fullWidth": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "name"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "form",
        "textarea",
        "input",
        "multiline"
    ],
    "examples": [
        {
            "name": "Textarea simple",
            "inputs": {
                "name": "message",
                "placeholder": "Votre message...",
                "rows": 4
            }
        },
        {
            "name": "Textarea avec compteur",
            "inputs": {
                "name": "bio",
                "placeholder": "Décrivez-vous...",
                "maxLength": 280,
                "showCount": true,
                "rows": 3
            }
        },
        {
            "name": "Textarea auto-resize",
            "inputs": {
                "name": "content",
                "placeholder": "Commencez à écrire...",
                "autoResize": true,
                "minRows": 2,
                "maxRows": 10
            }
        },
        {
            "name": "Textarea avec erreur",
            "inputs": {
                "name": "description",
                "value": "Texte trop court",
                "error": "Minimum 50 caractères requis"
            }
        }
    ]
}