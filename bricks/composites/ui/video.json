{
    "id": "video",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Lecteur vidéo embed (YouTube, Vimeo) ou fichier direct",
    "inputs": {
        "type": "object",
        "properties": {
            "src": {
                "type": "string",
                "description": "URL YouTube, Vimeo ou fichier vidéo direct"
            },
            "title": {
                "type": "string",
                "default": "Vidéo",
                "description": "Titre pour accessibilité"
            },
            "aspectRatio": {
                "type": "string",
                "enum": [
                    "16\/9",
                    "4\/3",
                    "1\/1",
                    "9\/16",
                    "21\/9"
                ],
                "default": "16\/9"
            },
            "autoplay": {
                "type": "boolean",
                "default": false
            },
            "muted": {
                "type": "boolean",
                "default": false
            },
            "loop": {
                "type": "boolean",
                "default": false
            },
            "controls": {
                "type": "boolean",
                "default": true
            },
            "poster": {
                "type": "string",
                "description": "Image de couverture (pour fichiers directs)"
            },
            "lazy": {
                "type": "boolean",
                "default": true,
                "description": "Chargement différé"
            },
            "rounded": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "shadow": {
                "type": "boolean",
                "default": true
            },
            "maxWidth": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "full"
                ],
                "default": "full"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "src"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "video",
        "youtube",
        "vimeo",
        "media",
        "embed"
    ],
    "examples": [
        {
            "name": "YouTube",
            "inputs": {
                "src": "https:\/\/www.youtube.com\/watch?v=dQw4w9WgXcQ",
                "title": "Vidéo YouTube"
            }
        },
        {
            "name": "Vimeo",
            "inputs": {
                "src": "https:\/\/vimeo.com\/123456789",
                "title": "Vidéo Vimeo",
                "aspectRatio": "16\/9"
            }
        },
        {
            "name": "Fichier direct",
            "inputs": {
                "src": "\/videos\/demo.mp4",
                "poster": "\/images\/video-poster.jpg",
                "controls": true
            }
        }
    ]
}