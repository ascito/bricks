{
    "id": "blockquote",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Citation avec attribution optionnelle",
    "inputs": {
        "type": "object",
        "properties": {
            "content": {
                "type": "string",
                "description": "Texte de la citation"
            },
            "cite": {
                "type": "string",
                "description": "Auteur ou source de la citation"
            },
            "source": {
                "type": "string",
                "description": "Titre de l'œuvre ou URL source"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "bordered",
                    "highlighted",
                    "minimal",
                    "large"
                ],
                "default": "default"
            },
            "color": {
                "type": "string",
                "enum": [
                    "default",
                    "primary",
                    "secondary",
                    "muted"
                ],
                "default": "default"
            },
            "align": {
                "type": "string",
                "enum": [
                    "left",
                    "center",
                    "right"
                ],
                "default": "left"
            },
            "showQuotes": {
                "type": "boolean",
                "default": true,
                "description": "Afficher les guillemets décoratifs"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "content"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "blockquote",
        "quote",
        "citation",
        "text"
    ],
    "examples": [
        {
            "name": "Citation simple",
            "inputs": {
                "content": "La simplicité est la sophistication suprême.",
                "cite": "Léonard de Vinci"
            }
        },
        {
            "name": "Citation avec source",
            "inputs": {
                "content": "Le seul vrai voyage serait de changer de regard.",
                "cite": "Marcel Proust",
                "source": "À la recherche du temps perdu",
                "variant": "bordered"
            }
        },
        {
            "name": "Grande citation centrée",
            "inputs": {
                "content": "L'imagination est plus importante que le savoir.",
                "cite": "Albert Einstein",
                "variant": "large",
                "align": "center",
                "color": "primary"
            }
        }
    ]
}