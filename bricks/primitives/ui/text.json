{
    "id": "text",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Texte simple avec formatage basique",
    "inputs": {
        "type": "object",
        "properties": {
            "content": {
                "type": "string",
                "description": "Contenu textuel",
                "default": ""
            },
            "tag": {
                "type": "string",
                "enum": [
                    "span",
                    "p",
                    "div",
                    "small",
                    "strong",
                    "em"
                ],
                "default": "span",
                "description": "Balise HTML Ã  utiliser"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md",
                "description": "Taille du texte"
            },
            "weight": {
                "type": "string",
                "enum": [
                    "normal",
                    "medium",
                    "semibold",
                    "bold"
                ],
                "default": "normal",
                "description": "Graisse de la police"
            },
            "color": {
                "type": "string",
                "default": "inherit",
                "description": "Couleur du texte (classe ou valeur CSS)"
            },
            "align": {
                "type": "string",
                "enum": [
                    "left",
                    "center",
                    "right",
                    "justify"
                ],
                "default": "left"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "text",
        "content"
    ],
    "examples": [
        {
            "name": "Texte simple",
            "inputs": {
                "content": "Hello World"
            }
        },
        {
            "name": "Texte en gras",
            "inputs": {
                "content": "Important",
                "weight": "bold"
            }
        },
        {
            "name": "Petit texte secondaire",
            "inputs": {
                "content": "Note de bas de page",
                "size": "sm",
                "color": "muted"
            }
        }
    ]
}