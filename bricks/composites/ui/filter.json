{
    "id": "filter",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Groupe de filtres avec checkboxes, radios ou boutons. Idéal pour catalogues, recherches.",
    "inputs": {
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "description": "Titre du groupe de filtres",
                "nullable": true
            },
            "name": {
                "type": "string",
                "description": "Nom du champ pour le formulaire",
                "default": "filter"
            },
            "type": {
                "type": "string",
                "enum": [
                    "checkbox",
                    "radio",
                    "buttons",
                    "pills"
                ],
                "default": "checkbox"
            },
            "options": {
                "type": "array",
                "description": "Liste des options",
                "items": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        },
                        "count": {
                            "type": "integer",
                            "nullable": true
                        },
                        "checked": {
                            "type": "boolean",
                            "default": false
                        },
                        "disabled": {
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "required": [
                        "value",
                        "label"
                    ]
                },
                "default": []
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "bordered",
                    "card"
                ],
                "default": "default"
            },
            "collapsible": {
                "type": "boolean",
                "description": "Permet de replier le groupe",
                "default": false
            },
            "defaultOpen": {
                "type": "boolean",
                "description": "Ouvert par défaut si collapsible",
                "default": true
            },
            "showCount": {
                "type": "boolean",
                "description": "Afficher le nombre de résultats",
                "default": true
            },
            "showSearch": {
                "type": "boolean",
                "description": "Afficher un champ de recherche dans les options",
                "default": false
            },
            "maxVisible": {
                "type": "integer",
                "description": "Nombre max d'options visibles (0 = toutes)",
                "default": 0
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "target": {
                "type": "string",
                "description": "Sélecteur CSS des éléments à filtrer (ex: .product-card)",
                "nullable": true
            }
        },
        "required": [
            "name",
            "options"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "filter",
        "search",
        "catalog",
        "facet",
        "checkbox",
        "radio"
    ],
    "examples": [
        {
            "name": "Catégories (checkbox)",
            "inputs": {
                "title": "Catégorie",
                "name": "category",
                "type": "checkbox",
                "options": [
                    {
                        "value": "laravel",
                        "label": "Laravel",
                        "count": 12
                    },
                    {
                        "value": "react",
                        "label": "React",
                        "count": 8
                    },
                    {
                        "value": "vue",
                        "label": "Vue.js",
                        "count": 6
                    },
                    {
                        "value": "php",
                        "label": "PHP",
                        "count": 15,
                        "checked": true
                    }
                ]
            }
        },
        {
            "name": "Prix (radio)",
            "inputs": {
                "title": "Budget",
                "name": "price",
                "type": "radio",
                "options": [
                    {
                        "value": "all",
                        "label": "Tous les prix",
                        "checked": true
                    },
                    {
                        "value": "0-500",
                        "label": "Moins de 500€"
                    },
                    {
                        "value": "500-1000",
                        "label": "500€ - 1000€"
                    },
                    {
                        "value": "1000+",
                        "label": "Plus de 1000€"
                    }
                ]
            }
        },
        {
            "name": "Tags (pills)",
            "inputs": {
                "title": "Technologies",
                "name": "tech",
                "type": "pills",
                "options": [
                    {
                        "value": "js",
                        "label": "JavaScript",
                        "checked": true
                    },
                    {
                        "value": "ts",
                        "label": "TypeScript"
                    },
                    {
                        "value": "php",
                        "label": "PHP",
                        "checked": true
                    },
                    {
                        "value": "python",
                        "label": "Python"
                    }
                ]
            }
        }
    ]
}