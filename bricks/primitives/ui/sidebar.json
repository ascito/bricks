{
    "id": "sidebar",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Barre lat√©rale verticale responsive avec mode drawer mobile",
    "inputs": {
        "type": "object",
        "properties": {
            "logo": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string",
                        "default": "\/"
                    }
                },
                "default": {
                    "text": "App",
                    "href": "\/"
                }
            },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string"
                        },
                        "active": {
                            "type": "boolean",
                            "default": false
                        },
                        "badge": {
                            "type": "string"
                        }
                    }
                },
                "default": []
            },
            "footerItems": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string"
                        },
                        "action": {
                            "type": "string"
                        }
                    }
                },
                "default": []
            },
            "position": {
                "type": "string",
                "enum": [
                    "left",
                    "right"
                ],
                "default": "left"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "dark",
                    "light"
                ],
                "default": "dark"
            },
            "collapsible": {
                "type": "boolean",
                "default": true
            },
            "collapsed": {
                "type": "boolean",
                "default": false
            },
            "width": {
                "type": "string",
                "default": "250px"
            },
            "collapsedWidth": {
                "type": "string",
                "default": "70px"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "navigation",
        "sidebar",
        "responsive"
    ],
    "examples": [
        {
            "name": "Sidebar admin",
            "inputs": {
                "logo": {
                    "text": "Admin",
                    "icon": "box"
                },
                "items": [
                    {
                        "label": "Dashboard",
                        "href": "\/admin",
                        "icon": "bar-chart",
                        "active": true
                    },
                    {
                        "label": "Users",
                        "href": "\/admin\/users",
                        "icon": "users",
                        "badge": "12"
                    },
                    {
                        "label": "Settings",
                        "href": "\/admin\/settings",
                        "icon": "settings"
                    }
                ],
                "footerItems": [
                    {
                        "label": "Logout",
                        "icon": "logout",
                        "action": "logout"
                    }
                ]
            }
        }
    ]
}