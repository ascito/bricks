{
    "id": "progress-bar",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Barre de progression avec pourcentage, couleurs et animations.",
    "inputs": {
        "type": "object",
        "properties": {
            "value": {
                "type": "number",
                "description": "Valeur actuelle (0-100)",
                "default": 0,
                "minimum": 0,
                "maximum": 100
            },
            "max": {
                "type": "number",
                "description": "Valeur maximum",
                "default": 100
            },
            "label": {
                "type": "string",
                "description": "Label affiché",
                "nullable": true
            },
            "showValue": {
                "type": "boolean",
                "description": "Afficher la valeur\/pourcentage",
                "default": false
            },
            "valuePosition": {
                "type": "string",
                "enum": [
                    "inside",
                    "outside",
                    "top"
                ],
                "default": "outside"
            },
            "valueFormat": {
                "type": "string",
                "enum": [
                    "percent",
                    "value",
                    "fraction"
                ],
                "default": "percent",
                "description": "Format: \"75%\", \"75\", \"75\/100\""
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "striped",
                    "animated"
                ],
                "default": "default"
            },
            "color": {
                "type": "string",
                "enum": [
                    "primary",
                    "success",
                    "warning",
                    "danger",
                    "info",
                    "secondary"
                ],
                "default": "primary"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "rounded": {
                "type": "boolean",
                "description": "Coins très arrondis (pill)",
                "default": true
            },
            "indeterminate": {
                "type": "boolean",
                "description": "Mode indéterminé (chargement sans valeur)",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "progress",
        "bar",
        "loading",
        "percentage",
        "status"
    ],
    "examples": [
        {
            "name": "Progression simple",
            "inputs": {
                "value": 65,
                "showValue": true
            }
        },
        {
            "name": "Avec label",
            "inputs": {
                "value": 30,
                "label": "Progression de la formation",
                "showValue": true,
                "valuePosition": "top",
                "color": "success"
            }
        },
        {
            "name": "Animée",
            "inputs": {
                "value": 75,
                "variant": "animated",
                "color": "info",
                "size": "lg"
            }
        },
        {
            "name": "Indéterminée",
            "inputs": {
                "indeterminate": true,
                "label": "Chargement..."
            }
        }
    ]
}