{
    "id": "form-field",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Champ de formulaire complet avec label, input et message d'erreur",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "value",
            "attribute": "data-value",
            "type": "string"
        },
        "properties": {
            "label": {
                "type": "string",
                "description": "Label du champ"
            },
            "name": {
                "type": "string",
                "description": "Nom du champ (attribut name)"
            },
            "type": {
                "type": "string",
                "enum": [
                    "text",
                    "email",
                    "password",
                    "tel",
                    "url",
                    "number",
                    "date",
                    "time",
                    "datetime-local",
                    "select",
                    "textarea"
                ],
                "default": "text"
            },
            "placeholder": {
                "type": "string",
                "default": ""
            },
            "value": {
                "type": "string",
                "default": "",
                "description": "Valeur du champ."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding. Génère data-value."
            },
            "required": {
                "type": "boolean",
                "default": false
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "readonly": {
                "type": "boolean",
                "default": false
            },
            "error": {
                "type": "string",
                "nullable": true,
                "description": "Message d'erreur à afficher"
            },
            "hint": {
                "type": "string",
                "nullable": true,
                "description": "Texte d'aide sous le champ"
            },
            "options": {
                "type": "array",
                "description": "Options pour select (array de {value, label})",
                "default": []
            },
            "rows": {
                "type": "integer",
                "default": 3,
                "description": "Nombre de lignes pour textarea"
            },
            "min": {
                "type": "string",
                "nullable": true
            },
            "max": {
                "type": "string",
                "nullable": true
            },
            "pattern": {
                "type": "string",
                "nullable": true
            },
            "autocomplete": {
                "type": "string",
                "nullable": true
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": [
            "label",
            "name"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "form",
        "input",
        "field"
    ],
    "examples": [
        {
            "name": "Champ texte simple",
            "inputs": {
                "label": "Nom",
                "name": "name",
                "placeholder": "Entrez votre nom"
            }
        },
        {
            "name": "Champ email requis",
            "inputs": {
                "label": "Email",
                "name": "email",
                "type": "email",
                "required": true
            }
        },
        {
            "name": "Select avec options",
            "inputs": {
                "label": "Pays",
                "name": "country",
                "type": "select",
                "options": [
                    {
                        "value": "fr",
                        "label": "France"
                    },
                    {
                        "value": "be",
                        "label": "Belgique"
                    },
                    {
                        "value": "ch",
                        "label": "Suisse"
                    }
                ]
            }
        },
        {
            "name": "Textarea",
            "inputs": {
                "label": "Message",
                "name": "message",
                "type": "textarea",
                "rows": 5
            }
        }
    ]
}