{
    "id": "carousel",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Carrousel\/slider d'images ou de contenu",
    "inputs": {
        "type": "object",
        "properties": {
            "slides": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "image": {
                            "type": "string",
                            "description": "URL de l'image"
                        },
                        "alt": {
                            "type": "string",
                            "default": ""
                        },
                        "title": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "link": {
                            "type": "string",
                            "description": "URL du lien"
                        }
                    }
                }
            },
            "autoplay": {
                "type": "boolean",
                "default": false
            },
            "interval": {
                "type": "integer",
                "default": 5000,
                "description": "Intervalle autoplay en ms"
            },
            "loop": {
                "type": "boolean",
                "default": true
            },
            "showArrows": {
                "type": "boolean",
                "default": true
            },
            "showDots": {
                "type": "boolean",
                "default": true
            },
            "slidesPerView": {
                "type": "integer",
                "enum": [
                    1,
                    2,
                    3,
                    4
                ],
                "default": 1
            },
            "gap": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "aspectRatio": {
                "type": "string",
                "enum": [
                    "16\/9",
                    "4\/3",
                    "1\/1",
                    "3\/2",
                    "21\/9",
                    "auto"
                ],
                "default": "16\/9"
            },
            "effect": {
                "type": "string",
                "enum": [
                    "slide",
                    "fade"
                ],
                "default": "slide"
            },
            "rounded": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "showCaption": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "slides"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "carousel",
        "slider",
        "gallery",
        "images",
        "swipe"
    ],
    "examples": [
        {
            "name": "Galerie photos",
            "inputs": {
                "slides": [
                    {
                        "image": "https:\/\/picsum.photos\/800\/450?1",
                        "alt": "Image 1"
                    },
                    {
                        "image": "https:\/\/picsum.photos\/800\/450?2",
                        "alt": "Image 2"
                    },
                    {
                        "image": "https:\/\/picsum.photos\/800\/450?3",
                        "alt": "Image 3"
                    }
                ],
                "autoplay": true,
                "showDots": true
            }
        },
        {
            "name": "Multi-slides",
            "inputs": {
                "slidesPerView": 3,
                "gap": "lg",
                "slides": [
                    {
                        "image": "https:\/\/picsum.photos\/400\/300?1",
                        "title": "Slide 1"
                    },
                    {
                        "image": "https:\/\/picsum.photos\/400\/300?2",
                        "title": "Slide 2"
                    },
                    {
                        "image": "https:\/\/picsum.photos\/400\/300?3",
                        "title": "Slide 3"
                    },
                    {
                        "image": "https:\/\/picsum.photos\/400\/300?4",
                        "title": "Slide 4"
                    }
                ]
            }
        }
    ]
}