{
  "id": "login-page",
  "name": "Page de connexion",
  "description": "Formulaire de connexion avec logo, champs email/password et lien mot de passe oublié",
  "bricks": [
    {
      "id": "page-center",
      "brick": "center",
      "inputs": {"fullHeight": true, "padding": "lg", "background": "gradient"},
      "slots": {"children": ["main-card"]}
    },
    {
      "id": "main-card",
      "brick": "card",
      "inputs": {
        "variant": "elevated",
        "padding": "lg",
        "radius": "lg",
        "minWidth": "320px",
        "maxWidth": "400px"
      },
      "slots": {"body": ["form-stack"]}
    },
    {
      "id": "form-stack",
      "brick": "stack",
      "inputs": {"gap": "md", "align": "stretch"},
      "slots": {"children": ["header", "login-form", "social-login", "footer"]}
    },
    {
      "id": "header",
      "brick": "stack",
      "inputs": {"gap": "sm", "align": "center"},
      "slots": {"children": ["logo", "title"]}
    },
    {
      "id": "logo",
      "brick": "avatar",
      "inputs": {"initials": "B", "size": "2xl", "color": "primary", "shape": "circle"}
    },
    {
      "id": "title",
      "brick": "heading",
      "inputs": {"content": "Connexion", "level": 2, "align": "center"}
    },
    {
      "id": "login-form",
      "brick": "form",
      "inputs": {"action": "/login", "method": "POST"},
      "slots": {"children": ["form-fields", "forgot-link", "submit-btn"]}
    },
    {
      "id": "form-fields",
      "brick": "stack",
      "inputs": {"gap": "sm"},
      "slots": {"children": ["email-field", "password-field"]}
    },
    {
      "id": "email-field",
      "brick": "form-field",
      "inputs": {
        "label": "Email",
        "name": "email",
        "type": "email",
        "placeholder": "votre@email.com",
        "required": true,
        "autocomplete": "email"
      }
    },
    {
      "id": "password-field",
      "brick": "form-field",
      "inputs": {
        "label": "Mot de passe",
        "name": "password",
        "type": "password",
        "placeholder": "Votre mot de passe",
        "required": true,
        "autocomplete": "current-password"
      }
    },
    {
      "id": "forgot-link",
      "brick": "link",
      "inputs": {"href": "/forgot-password", "label": "Mot de passe oublié ?", "variant": "muted", "size": "sm"}
    },
    {
      "id": "submit-btn",
      "brick": "button",
      "inputs": {"label": "Se connecter", "variant": "primary", "fullWidth": true, "type": "submit", "icon": "login", "size": "lg"}
    },
    {
      "id": "social-login",
      "brick": "social-login",
      "inputs": {
        "providers": ["google", "github"],
        "dividerText": "ou continuer avec",
        "direction": "vertical"
      }
    },
    {
      "id": "footer",
      "brick": "stack",
      "inputs": {"direction": "horizontal", "gap": "xs", "align": "center", "justify": "center"},
      "slots": {"children": ["register-text", "register-link"]}
    },
    {
      "id": "register-text",
      "brick": "text",
      "inputs": {"content": "Pas encore de compte ?", "color": "muted", "size": "sm"}
    },
    {
      "id": "register-link",
      "brick": "link",
      "inputs": {"href": "/register", "label": "S'inscrire", "size": "sm"}
    }
  ]
}
