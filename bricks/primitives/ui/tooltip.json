{
    "id": "tooltip",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Info-bulle contextuelle au hover ou focus",
    "inputs": {
        "type": "object",
        "properties": {
            "content": {
                "type": "string",
                "description": "Contenu du tooltip (HTML supporté)"
            },
            "position": {
                "type": "string",
                "enum": [
                    "top",
                    "bottom",
                    "left",
                    "right"
                ],
                "default": "top"
            },
            "trigger": {
                "type": "string",
                "enum": [
                    "hover",
                    "click",
                    "focus"
                ],
                "default": "hover"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "dark",
                    "light",
                    "primary"
                ],
                "default": "dark"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "arrow": {
                "type": "boolean",
                "default": true
            },
            "delay": {
                "type": "integer",
                "default": 200,
                "description": "Délai d'apparition en ms"
            },
            "maxWidth": {
                "type": "string",
                "default": "250px"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "content"
        ],
        "slots": {
            "trigger": {
                "description": "Élément déclencheur du tooltip"
            }
        }
    },
    "tags": [
        "ui",
        "primitive",
        "tooltip",
        "hint",
        "help",
        "popover",
        "hover"
    ],
    "examples": [
        {
            "name": "Tooltip simple",
            "inputs": {
                "content": "Information supplémentaire",
                "position": "top"
            }
        },
        {
            "name": "Tooltip clic",
            "inputs": {
                "content": "Cliquez pour fermer",
                "trigger": "click",
                "position": "bottom"
            }
        },
        {
            "name": "Tooltip light",
            "inputs": {
                "content": "Tooltip avec style clair",
                "variant": "light",
                "position": "right"
            }
        }
    ]
}