{
    "id": "alert",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Message d'alerte avec variantes (success, error, warning, info)",
    "inputs": {
        "type": "object",
        "properties": {
            "variant": {
                "type": "string",
                "enum": [
                    "info",
                    "success",
                    "warning",
                    "error"
                ],
                "default": "info"
            },
            "title": {
                "type": "string",
                "nullable": true,
                "description": "Titre de l'alerte (optionnel)"
            },
            "message": {
                "type": "string",
                "description": "Contenu de l'alerte"
            },
            "dismissible": {
                "type": "boolean",
                "default": false,
                "description": "Affiche un bouton pour fermer"
            },
            "icon": {
                "type": "string",
                "nullable": true,
                "description": "Icône personnalisée (sinon icône par défaut selon variant)"
            },
            "visible": {
                "type": "boolean",
                "default": true,
                "description": "Afficher ou masquer l'alerte"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": [
            "message"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "alert",
        "feedback",
        "notification"
    ],
    "examples": [
        {
            "name": "Alerte de succès",
            "inputs": {
                "variant": "success",
                "title": "Succès !",
                "message": "Votre action a été effectuée avec succès."
            }
        },
        {
            "name": "Alerte d'erreur",
            "inputs": {
                "variant": "error",
                "message": "Une erreur est survenue. Veuillez réessayer.",
                "dismissible": true
            }
        },
        {
            "name": "Alerte d'information",
            "inputs": {
                "variant": "info",
                "message": "Nouvelle fonctionnalité disponible !"
            }
        }
    ]
}