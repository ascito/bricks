{
    "id": "footer",
    "version": "1.0.0",
    "category": "layout.composite",
    "description": "Pied de page avec colonnes, liens et copyright",
    "inputs": {
        "type": "object",
        "properties": {
            "logo": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string",
                        "default": "\/"
                    }
                },
                "default": null
            },
            "description": {
                "type": "string",
                "default": "",
                "description": "Texte de description sous le logo"
            },
            "columns": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "links": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "label": {
                                        "type": "string"
                                    },
                                    "href": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "default": []
            },
            "social": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "icon": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    }
                },
                "default": []
            },
            "copyright": {
                "type": "string",
                "default": ""
            },
            "variant": {
                "type": "string",
                "enum": [
                    "light",
                    "dark",
                    "primary"
                ],
                "default": "light"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "navigation",
        "footer",
        "layout"
    ],
    "examples": [
        {
            "name": "Footer simple",
            "inputs": {
                "logo": {
                    "text": "Bricks"
                },
                "description": "Un système de composants pour l'IA",
                "columns": [
                    {
                        "title": "Produit",
                        "links": [
                            {
                                "label": "Fonctionnalités",
                                "href": "#features"
                            },
                            {
                                "label": "Tarifs",
                                "href": "\/pricing"
                            },
                            {
                                "label": "Documentation",
                                "href": "\/docs"
                            }
                        ]
                    },
                    {
                        "title": "Entreprise",
                        "links": [
                            {
                                "label": "À propos",
                                "href": "\/about"
                            },
                            {
                                "label": "Contact",
                                "href": "\/contact"
                            }
                        ]
                    }
                ],
                "copyright": "© 2026 Bricks. Tous droits réservés.",
                "variant": "dark"
            }
        }
    ]
}