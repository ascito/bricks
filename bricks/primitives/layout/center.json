{
    "id": "center",
    "version": "1.0.0",
    "category": "layout.primitive",
    "description": "Centre le contenu horizontalement et\/ou verticalement",
    "inputs": {
        "type": "object",
        "properties": {
            "horizontal": {
                "type": "boolean",
                "default": true,
                "description": "Centrer horizontalement"
            },
            "vertical": {
                "type": "boolean",
                "default": true,
                "description": "Centrer verticalement"
            },
            "fullHeight": {
                "type": "boolean",
                "default": false,
                "description": "Prendre toute la hauteur disponible (100vh)"
            },
            "minHeight": {
                "type": "string",
                "nullable": true,
                "description": "Hauteur minimum (ex: 400px, 50vh)"
            },
            "background": {
                "type": "string",
                "enum": [
                    "none",
                    "white",
                    "gray",
                    "dark",
                    "primary",
                    "gradient"
                ],
                "default": "none",
                "description": "Couleur de fond"
            },
            "backgroundImage": {
                "type": "string",
                "nullable": true,
                "description": "URL de l'image de fond"
            },
            "backgroundOverlay": {
                "type": "string",
                "enum": [
                    "none",
                    "light",
                    "dark"
                ],
                "default": "none",
                "description": "Overlay sur l'image"
            },
            "padding": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "tag": {
                "type": "string",
                "enum": [
                    "div",
                    "section",
                    "main"
                ],
                "default": "div"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "layout",
        "primitive",
        "center",
        "flex",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Centrage complet pleine page",
            "inputs": {
                "fullHeight": true
            }
        },
        {
            "name": "Centrage horizontal seulement",
            "inputs": {
                "vertical": false
            }
        },
        {
            "name": "Centrage avec hauteur minimum",
            "inputs": {
                "minHeight": "500px"
            }
        }
    ]
}