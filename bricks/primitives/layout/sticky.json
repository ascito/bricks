{
    "id": "sticky",
    "version": "1.0.0",
    "category": "layout.primitive",
    "description": "Conteneur sticky qui se fixe au scroll",
    "inputs": {
        "type": "object",
        "properties": {
            "top": {
                "type": "string",
                "default": "0",
                "description": "Position où l'élément se fixe (ex: 0, 1rem, 80px)"
            },
            "bottom": {
                "type": "string",
                "nullable": true,
                "description": "Alternative: se fixe en bas"
            },
            "zIndex": {
                "type": "integer",
                "default": 40,
                "description": "Z-index quand sticky"
            },
            "offset": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "none",
                "description": "Offset prédéfini depuis le haut"
            },
            "background": {
                "type": "string",
                "enum": [
                    "none",
                    "white",
                    "blur"
                ],
                "default": "none",
                "description": "Fond quand sticky (utile pour lisibilité)"
            },
            "shadow": {
                "type": "boolean",
                "default": false,
                "description": "Ajouter une ombre quand sticky"
            },
            "tag": {
                "type": "string",
                "enum": [
                    "div",
                    "header",
                    "nav",
                    "aside",
                    "section"
                ],
                "default": "div"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "layout",
        "primitive",
        "position",
        "sticky",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Header sticky",
            "inputs": {
                "top": "0",
                "background": "white",
                "shadow": true,
                "tag": "header"
            }
        },
        {
            "name": "Sidebar sticky avec offset",
            "inputs": {
                "offset": "md",
                "tag": "aside"
            }
        },
        {
            "name": "Nav sticky avec blur",
            "inputs": {
                "top": "0",
                "background": "blur",
                "tag": "nav"
            }
        }
    ]
}