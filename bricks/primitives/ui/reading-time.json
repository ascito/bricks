{
    "id": "reading-time",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Affiche le temps de lecture estimé",
    "inputs": {
        "type": "object",
        "properties": {
            "minutes": {
                "type": "integer",
                "description": "Temps de lecture en minutes (calculé ou fourni)",
                "default": 5
            },
            "wordCount": {
                "type": "integer",
                "description": "Nombre de mots (alternative à minutes, 200 mots\/min)",
                "nullable": true
            },
            "label": {
                "type": "string",
                "default": "{minutes} min de lecture",
                "description": "Format du label ({minutes} sera remplacé)"
            },
            "showIcon": {
                "type": "boolean",
                "default": true
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "muted",
                    "badge"
                ],
                "default": "default"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "blog",
        "article",
        "reading-time"
    ],
    "examples": [
        {
            "name": "Temps simple",
            "inputs": {
                "minutes": 5
            }
        },
        {
            "name": "Calculé depuis mots",
            "inputs": {
                "wordCount": 1500
            }
        },
        {
            "name": "Style badge",
            "inputs": {
                "minutes": 3,
                "variant": "badge"
            }
        }
    ]
}