{
  "name": "blog-post",
  "version": "1.0.0",
  "description": "Blog article page example",
  "bricks": [
    {
      "brick": "seo",
      "inputs": {
        "title": "{{ data.post.title }} | Blog",
        "description": "{{ data.post.excerpt }}",
        "type": "article",
        "article": {
          "publishedTime": "{{ data.post.publishedAt }}",
          "author": "{{ data.post.author.name }}"
        }
      }
    },
    {
      "brick": "header",
      "inputs": {
        "logo": { "src": "/images/logo.svg" },
        "navigation": "{{ data.navigation }}"
      }
    },
    {
      "brick": "article",
      "inputs": {
        "maxWidth": "prose"
      },
      "children": [
        {
          "brick": "breadcrumb",
          "inputs": {
            "items": [
              { "label": "Home", "href": "/" },
              { "label": "Blog", "href": "/blog" },
              { "label": "{{ data.post.title }}" }
            ]
          }
        },
        {
          "brick": "heading",
          "inputs": {
            "content": "{{ data.post.title }}",
            "level": 1,
            "size": "3xl"
          }
        },
        {
          "brick": "stack",
          "inputs": {
            "direction": "horizontal",
            "gap": "md",
            "align": "center"
          },
          "children": [
            {
              "brick": "author-card",
              "inputs": {
                "name": "{{ data.post.author.name }}",
                "avatar": "{{ data.post.author.avatar }}",
                "role": "{{ data.post.author.role }}",
                "variant": "inline"
              }
            },
            {
              "brick": "text",
              "inputs": {
                "content": "{{ data.post.publishedAt | date }}",
                "color": "muted"
              }
            },
            {
              "brick": "reading-time",
              "inputs": {
                "content": "{{ data.post.content }}"
              }
            }
          ]
        },
        {
          "brick": "image",
          "inputs": {
            "src": "{{ data.post.featuredImage }}",
            "alt": "{{ data.post.title }}",
            "aspectRatio": "16/9",
            "radius": "lg"
          }
        },
        {
          "brick": "table-of-contents",
          "inputs": {
            "content": "{{ data.post.content }}"
          }
        },
        {
          "brick": "rich-text",
          "inputs": {
            "content": "{{ data.post.content }}"
          }
        },
        {
          "brick": "divider"
        },
        {
          "brick": "stack",
          "inputs": {
            "direction": "horizontal",
            "justify": "between",
            "align": "center"
          },
          "children": [
            {
              "brick": "stack",
              "inputs": {
                "direction": "horizontal",
                "gap": "sm"
              },
              "children": [
                {
                  "brick": "badge",
                  "repeat": "{{ data.post.tags }}",
                  "as": "tag",
                  "inputs": {
                    "content": "{{ tag }}",
                    "variant": "secondary",
                    "style": "soft"
                  }
                }
              ]
            },
            {
              "brick": "share-buttons",
              "inputs": {
                "url": "{{ data.post.url }}",
                "title": "{{ data.post.title }}",
                "platforms": ["twitter", "linkedin", "facebook"]
              }
            }
          ]
        },
        {
          "brick": "author-card",
          "inputs": {
            "name": "{{ data.post.author.name }}",
            "avatar": "{{ data.post.author.avatar }}",
            "bio": "{{ data.post.author.bio }}",
            "variant": "full"
          }
        }
      ]
    },
    {
      "brick": "footer",
      "inputs": {
        "logo": "/images/logo.svg",
        "copyright": "Â© 2026 My Site"
      }
    }
  ]
}
