{
    "id": "nav-list",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Liste de navigation simple (sidebar, menu)",
    "inputs": {
        "type": "object",
        "properties": {
            "items": {
                "type": "array",
                "description": "Liste des éléments de navigation",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string",
                            "nullable": true
                        },
                        "active": {
                            "type": "boolean",
                            "default": false
                        },
                        "data": {
                            "type": "object",
                            "default": []
                        }
                    },
                    "required": [
                        "label",
                        "href"
                    ]
                }
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "sidebar",
                    "horizontal",
                    "pills"
                ],
                "default": "default"
            },
            "gap": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "sm"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "items"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "navigation",
        "menu",
        "sidebar"
    ],
    "examples": [
        {
            "name": "Navigation sidebar",
            "inputs": {
                "variant": "sidebar",
                "items": [
                    {
                        "label": "Dashboard",
                        "href": "#",
                        "icon": "bar-chart",
                        "active": true
                    },
                    {
                        "label": "Users",
                        "href": "#",
                        "icon": "users"
                    },
                    {
                        "label": "Settings",
                        "href": "#",
                        "icon": "settings"
                    }
                ]
            }
        },
        {
            "name": "Navigation horizontale",
            "inputs": {
                "variant": "horizontal",
                "items": [
                    {
                        "label": "Home",
                        "href": "\/"
                    },
                    {
                        "label": "About",
                        "href": "\/about"
                    },
                    {
                        "label": "Contact",
                        "href": "\/contact"
                    }
                ]
            }
        }
    ]
}