{
    "id": "file-upload",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Zone d'upload fichiers avec drag & drop, preview et barre de progression",
    "inputs": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "default": "file",
                "description": "Nom du champ pour le formulaire"
            },
            "label": {
                "type": "string",
                "default": "Déposez vos fichiers ici"
            },
            "description": {
                "type": "string",
                "default": "ou cliquez pour sélectionner"
            },
            "accept": {
                "type": "string",
                "description": "Types de fichiers acceptés (image\/*, .pdf, etc.)"
            },
            "multiple": {
                "type": "boolean",
                "default": false
            },
            "maxSize": {
                "type": "integer",
                "default": 10,
                "description": "Taille max en MB"
            },
            "maxFiles": {
                "type": "integer",
                "default": 5,
                "description": "Nombre max de fichiers (si multiple)"
            },
            "showPreview": {
                "type": "boolean",
                "default": true
            },
            "showProgress": {
                "type": "boolean",
                "default": true
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "compact",
                    "inline"
                ],
                "default": "default"
            },
            "icon": {
                "type": "string",
                "enum": [
                    "upload",
                    "image",
                    "file",
                    "folder"
                ],
                "default": "upload"
            },
            "required": {
                "type": "boolean",
                "default": false
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "file",
        "upload",
        "dropzone",
        "drag-drop",
        "form"
    ],
    "examples": [
        {
            "name": "Upload images",
            "inputs": {
                "accept": "image\/*",
                "multiple": true,
                "label": "Déposez vos images ici",
                "icon": "image"
            }
        },
        {
            "name": "Upload PDF",
            "inputs": {
                "accept": ".pdf",
                "label": "Déposez votre CV (PDF)",
                "maxSize": 5,
                "icon": "file"
            }
        },
        {
            "name": "Upload compact",
            "inputs": {
                "variant": "compact",
                "multiple": true
            }
        }
    ]
}