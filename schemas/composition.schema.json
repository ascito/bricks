{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bricks.ascito.fr/schemas/composition.schema.json",
  "title": "Composition Schema",
  "description": "Schema for defining a Bricks composition (page or fragment)",
  "type": "object",
  "required": ["name", "version", "bricks"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$",
      "description": "Unique identifier for the composition"
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the composition"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "data": {
      "type": "object",
      "description": "Data source configuration",
      "properties": {
        "source": {
          "type": "string",
          "description": "Path to data file (e.g., 'datas.json')"
        },
        "inline": {
          "type": "object",
          "description": "Inline data object"
        }
      }
    },
    "bricks": {
      "type": "array",
      "description": "Array of brick instances",
      "items": {
        "$ref": "#/definitions/brickInstance"
      }
    }
  },
  "definitions": {
    "brickInstance": {
      "type": "object",
      "required": ["brick"],
      "properties": {
        "brick": {
          "type": "string",
          "description": "Brick ID to instantiate"
        },
        "inputs": {
          "type": "object",
          "description": "Input values for the brick"
        },
        "children": {
          "type": "array",
          "description": "Child brick instances",
          "items": {
            "$ref": "#/definitions/brickInstance"
          }
        },
        "condition": {
          "type": "string",
          "description": "Conditional expression for rendering"
        },
        "repeat": {
          "type": "string",
          "description": "Data path for iteration"
        },
        "as": {
          "type": "string",
          "description": "Variable name for iteration item"
        },
        "key": {
          "type": "string",
          "description": "Unique key for iteration"
        }
      }
    }
  },
  "additionalProperties": false
}
