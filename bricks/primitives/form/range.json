{
    "id": "range",
    "version": "1.0.0",
    "category": "form.primitive",
    "description": "Slider pour sélectionner une valeur dans une plage",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "value",
            "attribute": "data-value",
            "type": "number"
        },
        "properties": {
            "name": {
                "type": "string",
                "description": "Nom du champ"
            },
            "label": {
                "type": "string",
                "description": "Label du slider"
            },
            "min": {
                "type": "number",
                "default": 0
            },
            "max": {
                "type": "number",
                "default": 100
            },
            "step": {
                "type": "number",
                "default": 1
            },
            "value": {
                "type": "number",
                "description": "Valeur initiale."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding. Génère data-value."
            },
            "showValue": {
                "type": "boolean",
                "default": true,
                "description": "Afficher la valeur actuelle"
            },
            "showMinMax": {
                "type": "boolean",
                "default": false,
                "description": "Afficher min\/max aux extrémités"
            },
            "showTicks": {
                "type": "boolean",
                "default": false,
                "description": "Afficher les graduations"
            },
            "tickCount": {
                "type": "integer",
                "default": 5,
                "description": "Nombre de graduations"
            },
            "unit": {
                "type": "string",
                "description": "Unité à afficher (ex: €, %, km)"
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "primary",
                    "success",
                    "warning",
                    "danger"
                ],
                "default": "primary"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "range",
        "slider",
        "form",
        "input"
    ],
    "examples": [
        {
            "name": "Range simple",
            "inputs": {
                "name": "volume",
                "label": "Volume",
                "value": 50
            }
        },
        {
            "name": "Range avec unité et min\/max",
            "inputs": {
                "name": "price",
                "label": "Prix maximum",
                "min": 0,
                "max": 1000,
                "value": 500,
                "unit": "€",
                "showMinMax": true
            }
        },
        {
            "name": "Range avec graduations",
            "inputs": {
                "name": "rating",
                "label": "Note",
                "min": 0,
                "max": 10,
                "step": 1,
                "value": 7,
                "showTicks": true,
                "tickCount": 11
            }
        }
    ]
}