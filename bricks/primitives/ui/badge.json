{
    "id": "badge",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Badge ou tag informatif avec variantes de couleur et de style",
    "inputs": {
        "type": "object",
        "properties": {
            "content": {
                "type": "string",
                "description": "Texte du badge"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "primary",
                    "secondary",
                    "success",
                    "warning",
                    "danger",
                    "info",
                    "dark",
                    "light"
                ],
                "default": "primary",
                "description": "Variante de couleur"
            },
            "style": {
                "type": "string",
                "enum": [
                    "solid",
                    "outline",
                    "soft"
                ],
                "default": "solid",
                "description": "Style du badge"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md",
                "description": "Taille du badge"
            },
            "rounded": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "full"
                ],
                "default": "md",
                "description": "Arrondi des coins"
            },
            "icon": {
                "type": "string",
                "description": "Nom de l'icône à afficher (optionnel)"
            },
            "iconPosition": {
                "type": "string",
                "enum": [
                    "start",
                    "end"
                ],
                "default": "start"
            },
            "dot": {
                "type": "boolean",
                "default": false,
                "description": "Afficher un point indicateur"
            },
            "pulse": {
                "type": "boolean",
                "default": false,
                "description": "Animation de pulsation (pour notifications)"
            },
            "removable": {
                "type": "boolean",
                "default": false,
                "description": "Afficher un bouton de suppression"
            },
            "href": {
                "type": "string",
                "description": "URL si le badge est cliquable"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "content"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "badge",
        "tag",
        "label",
        "status",
        "notification"
    ],
    "examples": [
        {
            "name": "Badge simple",
            "description": "Badge primaire basique",
            "inputs": {
                "content": "Nouveau"
            }
        },
        {
            "name": "Badge success",
            "description": "Badge de succès",
            "inputs": {
                "content": "En stock",
                "variant": "success"
            }
        },
        {
            "name": "Badge outline",
            "description": "Badge avec bordure",
            "inputs": {
                "content": "Catégorie",
                "variant": "secondary",
                "style": "outline"
            }
        },
        {
            "name": "Badge soft",
            "description": "Badge avec fond léger",
            "inputs": {
                "content": "Information",
                "variant": "info",
                "style": "soft"
            }
        },
        {
            "name": "Badge notification",
            "description": "Badge de notification avec pulse",
            "inputs": {
                "content": "3",
                "variant": "danger",
                "rounded": "full",
                "size": "sm",
                "pulse": true
            }
        },
        {
            "name": "Badge avec dot",
            "description": "Badge avec indicateur de statut",
            "inputs": {
                "content": "En ligne",
                "variant": "success",
                "style": "soft",
                "dot": true
            }
        },
        {
            "name": "Badge promotion",
            "description": "Badge de promotion restaurant",
            "inputs": {
                "content": "Recommandé",
                "variant": "warning",
                "style": "solid",
                "rounded": "full"
            }
        },
        {
            "name": "Badge removable",
            "description": "Tag supprimable",
            "inputs": {
                "content": "Végétarien",
                "variant": "success",
                "style": "soft",
                "removable": true
            }
        }
    ]
}