{
    "id": "password-confirm",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Deux champs mot de passe avec validation de correspondance",
    "inputs": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "default": "password",
                "description": "Nom du champ principal"
            },
            "label": {
                "type": "string",
                "default": "Mot de passe"
            },
            "confirmLabel": {
                "type": "string",
                "default": "Confirmer le mot de passe"
            },
            "placeholder": {
                "type": "string",
                "default": "Entrez votre mot de passe"
            },
            "confirmPlaceholder": {
                "type": "string",
                "default": "Confirmez votre mot de passe"
            },
            "showStrength": {
                "type": "boolean",
                "default": true,
                "description": "Afficher l'indicateur de force"
            },
            "strengthLabels": {
                "type": "object",
                "properties": {
                    "weak": {
                        "type": "string",
                        "default": "Faible"
                    },
                    "fair": {
                        "type": "string",
                        "default": "Moyen"
                    },
                    "good": {
                        "type": "string",
                        "default": "Bon"
                    },
                    "strong": {
                        "type": "string",
                        "default": "Fort"
                    }
                }
            },
            "matchError": {
                "type": "string",
                "default": "Les mots de passe ne correspondent pas"
            },
            "matchSuccess": {
                "type": "string",
                "default": "Les mots de passe correspondent"
            },
            "minLength": {
                "type": "integer",
                "default": 8
            },
            "required": {
                "type": "boolean",
                "default": true
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "hint": {
                "type": "string",
                "description": "Texte d'aide sous le premier champ"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML de base"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "password",
        "confirm",
        "form",
        "security",
        "registration"
    ],
    "examples": [
        {
            "name": "Password confirm simple",
            "inputs": {
                "name": "password",
                "label": "Mot de passe",
                "confirmLabel": "Confirmer"
            }
        },
        {
            "name": "Inscription complète",
            "inputs": {
                "name": "password",
                "label": "Créer un mot de passe",
                "confirmLabel": "Confirmer le mot de passe",
                "showStrength": true,
                "hint": "Minimum 8 caractères avec majuscules, chiffres et symboles",
                "minLength": 8
            }
        }
    ]
}