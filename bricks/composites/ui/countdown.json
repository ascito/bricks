{
    "id": "countdown",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Compte à rebours avec jours, heures, minutes, secondes. Idéal pour lancements, promos, événements.",
    "inputs": {
        "type": "object",
        "properties": {
            "targetDate": {
                "type": "string",
                "description": "Date cible (ISO 8601: YYYY-MM-DDTHH:mm:ss)",
                "default": ""
            },
            "label": {
                "type": "string",
                "description": "Texte affiché au-dessus du compte à rebours",
                "nullable": true
            },
            "expiredLabel": {
                "type": "string",
                "description": "Texte affiché quand le compte à rebours est terminé",
                "default": "Terminé !"
            },
            "showDays": {
                "type": "boolean",
                "default": true
            },
            "showHours": {
                "type": "boolean",
                "default": true
            },
            "showMinutes": {
                "type": "boolean",
                "default": true
            },
            "showSeconds": {
                "type": "boolean",
                "default": true
            },
            "labels": {
                "type": "object",
                "description": "Labels personnalisés pour chaque unité",
                "properties": {
                    "days": {
                        "type": "string",
                        "default": "Jours"
                    },
                    "hours": {
                        "type": "string",
                        "default": "Heures"
                    },
                    "minutes": {
                        "type": "string",
                        "default": "Minutes"
                    },
                    "seconds": {
                        "type": "string",
                        "default": "Secondes"
                    }
                },
                "default": []
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "cards",
                    "minimal",
                    "circles"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "color": {
                "type": "string",
                "enum": [
                    "default",
                    "primary",
                    "danger",
                    "dark"
                ],
                "default": "default"
            },
            "separator": {
                "type": "string",
                "description": "Séparateur entre les unités",
                "default": ":"
            },
            "showSeparator": {
                "type": "boolean",
                "default": true
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "targetDate"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "countdown",
        "timer",
        "event",
        "launch",
        "promo",
        "urgency"
    ],
    "examples": [
        {
            "name": "Lancement produit",
            "inputs": {
                "targetDate": "2026-02-01T00:00:00",
                "label": "Lancement dans",
                "variant": "cards"
            }
        },
        {
            "name": "Promo urgente",
            "inputs": {
                "targetDate": "2026-01-15T23:59:59",
                "label": "Offre expire dans",
                "color": "danger",
                "size": "lg"
            }
        },
        {
            "name": "Événement",
            "inputs": {
                "targetDate": "2026-06-15T09:00:00",
                "label": "Formation dans",
                "variant": "circles",
                "color": "primary"
            }
        }
    ]
}