{
    "id": "gallery",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Galerie d'images avec grille responsive et lightbox optionnelle",
    "inputs": {
        "type": "object",
        "properties": {
            "images": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "src": {
                            "type": "string",
                            "description": "URL de l'image"
                        },
                        "alt": {
                            "type": "string",
                            "description": "Texte alternatif"
                        },
                        "caption": {
                            "type": "string",
                            "description": "Légende (optionnel)"
                        },
                        "thumbnail": {
                            "type": "string",
                            "description": "URL miniature (optionnel)"
                        }
                    },
                    "required": [
                        "src"
                    ]
                },
                "description": "Liste des images"
            },
            "columns": {
                "type": "integer",
                "enum": [
                    2,
                    3,
                    4,
                    5,
                    6
                ],
                "default": 3,
                "description": "Nombre de colonnes (desktop)"
            },
            "gap": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md",
                "description": "Espacement entre images"
            },
            "aspectRatio": {
                "type": "string",
                "enum": [
                    "1\/1",
                    "4\/3",
                    "16\/9",
                    "3\/4",
                    "auto"
                ],
                "default": "1\/1",
                "description": "Ratio des images"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "grid",
                    "masonry",
                    "featured"
                ],
                "default": "grid",
                "description": "Style de disposition"
            },
            "rounded": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "lightbox": {
                "type": "boolean",
                "default": true,
                "description": "Activer le lightbox au clic"
            },
            "showCaptions": {
                "type": "boolean",
                "default": false,
                "description": "Afficher les légendes sous les images"
            },
            "hoverEffect": {
                "type": "string",
                "enum": [
                    "none",
                    "zoom",
                    "fade",
                    "overlay"
                ],
                "default": "zoom"
            },
            "maxImages": {
                "type": "integer",
                "description": "Nombre max d'images à afficher (optionnel)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "images"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "gallery",
        "images",
        "photos",
        "grid",
        "lightbox",
        "media"
    ],
