{
    "id": "toast",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Notification toast avec auto-dismiss",
    "inputs": {
        "type": "object",
        "properties": {
            "message": {
                "type": "string",
                "description": "Message à afficher"
            },
            "type": {
                "type": "string",
                "enum": [
                    "success",
                    "error",
                    "warning",
                    "info"
                ],
                "default": "info"
            },
            "position": {
                "type": "string",
                "enum": [
                    "top-right",
                    "top-left",
                    "bottom-right",
                    "bottom-left",
                    "top-center",
                    "bottom-center"
                ],
                "default": "top-right"
            },
            "duration": {
                "type": "integer",
                "default": 5000,
                "description": "Durée en ms (0 = pas d'auto-dismiss)"
            },
            "dismissible": {
                "type": "boolean",
                "default": true
            },
            "icon": {
                "type": "boolean",
                "default": true,
                "description": "Afficher l'icône du type"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "message"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "toast",
        "notification",
        "alert",
        "feedback"
    ],
    "examples": [
        {
            "name": "Toast succès",
            "inputs": {
                "message": "Opération réussie !",
                "type": "success"
            }
        },
        {
            "name": "Toast erreur",
            "inputs": {
                "message": "Une erreur est survenue",
                "type": "error",
                "duration": 0
            }
        }
    ]
}