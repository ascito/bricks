{
    "id": "link",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Lien hypertexte avec options de style",
    "inputs": {
        "type": "object",
        "properties": {
            "href": {
                "type": "string",
                "description": "URL de destination"
            },
            "label": {
                "type": "string",
                "description": "Texte du lien"
            },
            "target": {
                "type": "string",
                "enum": [
                    "_self",
                    "_blank",
                    "_parent",
                    "_top"
                ],
                "default": "_self"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "muted",
                    "primary",
                    "underline",
                    "none"
                ],
                "default": "default"
            },
            "external": {
                "type": "boolean",
                "default": false,
                "description": "Ouvre dans un nouvel onglet avec rel=\"noopener\""
            },
            "icon": {
                "type": "string",
                "nullable": true,
                "description": "Ic√¥ne optionnelle"
            },
            "download": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            },
            "data": {
                "type": "object",
                "description": "Attributs data-* personnalis√©s",
                "default": []
            }
        },
        "required": [
            "href",
            "label"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "navigation",
        "link"
    ],
    "examples": [
        {
            "name": "Lien simple",
            "inputs": {
                "href": "\/about",
                "label": "√Ä propos"
            }
        },
        {
            "name": "Lien externe",
            "inputs": {
                "href": "https:\/\/example.com",
                "label": "Visiter le site",
                "external": true
            }
        },
        {
            "name": "Lien de t√©l√©chargement",
            "inputs": {
                "href": "\/files\/document.pdf",
                "label": "T√©l√©charger le PDF",
                "download": true,
                "icon": "üìÑ"
            }
        }
    ]
}