{
    "id": "checkbox",
    "version": "1.0.0",
    "category": "form.primitive",
    "description": "Case à cocher avec label",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "checked",
            "attribute": "data-checked",
            "type": "boolean"
        },
        "properties": {
            "name": {
                "type": "string",
                "description": "Nom du champ"
            },
            "label": {
                "type": "string",
                "description": "Label affiché à côté de la case"
            },
            "checked": {
                "type": "boolean",
                "default": false,
                "description": "État coché."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding. Génère data-checked."
            },
            "value": {
                "type": "string",
                "default": "1",
                "description": "Valeur envoyée si coché"
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "required": {
                "type": "boolean",
                "default": false
            },
            "error": {
                "type": "string",
                "nullable": true
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": [
            "name",
            "label"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "form",
        "input",
        "checkbox"
    ],
    "examples": [
        {
            "name": "Checkbox simple",
            "inputs": {
                "name": "terms",
                "label": "J'accepte les conditions"
            }
        },
        {
            "name": "Checkbox coché",
            "inputs": {
                "name": "newsletter",
                "label": "S'inscrire à la newsletter",
                "checked": true
            }
        },
        {
            "name": "Checkbox requis",
            "inputs": {
                "name": "consent",
                "label": "Je consens au traitement de mes données",
                "required": true
            }
        }
    ]
}