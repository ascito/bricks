{
    "id": "forgot-password",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Formulaire de mot de passe oublié avec email et confirmation",
    "inputs": {
        "type": "object",
        "properties": {
            "action": {
                "type": "string",
                "default": "\/forgot-password",
                "description": "URL de soumission du formulaire"
            },
            "method": {
                "type": "string",
                "enum": [
                    "POST",
                    "GET"
                ],
                "default": "POST"
            },
            "title": {
                "type": "string",
                "default": "Mot de passe oublié"
            },
            "subtitle": {
                "type": "string",
                "default": "Entrez votre email pour recevoir un lien de réinitialisation"
            },
            "showTitle": {
                "type": "boolean",
                "default": true
            },
            "emailLabel": {
                "type": "string",
                "default": "Email"
            },
            "emailPlaceholder": {
                "type": "string",
                "default": "votre@email.com"
            },
            "submitLabel": {
                "type": "string",
                "default": "Envoyer le lien"
            },
            "showBackToLogin": {
                "type": "boolean",
                "default": true
            },
            "backToLoginLabel": {
                "type": "string",
                "default": "Retour à la connexion"
            },
            "backToLoginUrl": {
                "type": "string",
                "default": "\/login"
            },
            "success": {
                "type": "boolean",
                "default": false,
                "description": "Afficher l'état de succès"
            },
            "successTitle": {
                "type": "string",
                "default": "Email envoyé !"
            },
            "successMessage": {
                "type": "string",
                "default": "Si cette adresse est associée à un compte, vous recevrez un email avec les instructions."
            },
            "error": {
                "type": "string",
                "description": "Message d'erreur à afficher"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "card",
                    "minimal"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "icon": {
                "type": "string",
                "enum": [
                    "lock",
                    "mail",
                    "key",
                    "none"
                ],
                "default": "mail",
                "description": "Icône affichée en haut du formulaire"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "auth",
        "password",
        "reset",
        "form",
        "authentication"
    ],
    "examples": [
        {
            "name": "Formulaire simple",
            "inputs": {
                "title": "Mot de passe oublié",
                "subtitle": "Entrez votre email pour réinitialiser votre mot de passe"
            }
        },
        {
            "name": "Avec carte",
            "inputs": {
                "title": "Réinitialiser le mot de passe",
                "variant": "card",
                "icon": "key"
            }
        },
        {
            "name": "État succès",
            "inputs": {
                "success": true,
                "successTitle": "Vérifiez votre boîte mail",
                "successMessage": "Un email vous a été envoyé avec les instructions de réinitialisation."
            }
        }
    ]
}