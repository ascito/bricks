{
    "id": "button",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Bouton interactif avec plusieurs variantes et tailles",
    "inputs": {
        "type": "object",
        "properties": {
            "label": {
                "type": "string",
                "description": "Texte affich√© dans le bouton",
                "default": "Click"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "primary",
                    "secondary",
                    "success",
                    "warning",
                    "danger",
                    "ghost",
                    "link"
                ],
                "default": "primary",
                "description": "Style visuel du bouton"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md",
                "description": "Taille du bouton"
            },
            "icon": {
                "type": "string",
                "nullable": true,
                "description": "Ic√¥ne optionnelle (emoji, SVG inline, ou classe)"
            },
            "iconPosition": {
                "type": "string",
                "enum": [
                    "left",
                    "right"
                ],
                "default": "left"
            },
            "type": {
                "type": "string",
                "enum": [
                    "button",
                    "submit",
                    "reset"
                ],
                "default": "button"
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "loading": {
                "type": "boolean",
                "default": false,
                "description": "Affiche un spinner de chargement"
            },
            "fullWidth": {
                "type": "boolean",
                "default": false,
                "description": "Prend toute la largeur disponible"
            },
            "href": {
                "type": "string",
                "nullable": true,
                "description": "URL du lien (g√©n√®re un <a> au lieu de <button>)"
            },
            "target": {
                "type": "string",
                "enum": [
                    "_self",
                    "_blank"
                ],
                "default": "_self"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            },
            "data": {
                "type": "object",
                "default": [],
                "description": "Attributs data-* personnalis√©s"
            }
        },
        "required": [
            "label"
        ]
    },
    "tags": [
        "ui",
        "primitive",
        "interactive",
        "action",
        "form-element"
    ],
    "examples": [
        {
            "name": "Bouton primaire simple",
            "inputs": {
                "label": "Envoyer"
            }
        },
        {
            "name": "Bouton danger avec ic√¥ne",
            "inputs": {
                "label": "Supprimer",
                "variant": "danger",
                "icon": "üóëÔ∏è"
            }
        },
        {
            "name": "Bouton submit large",
            "inputs": {
                "label": "Cr√©er mon compte",
                "variant": "primary",
                "size": "lg",
                "type": "submit",
                "fullWidth": true
            }
        },
        {
            "name": "Bouton en chargement",
            "inputs": {
                "label": "Chargement...",
                "loading": true,
                "disabled": true
            }
        }
    ]
}