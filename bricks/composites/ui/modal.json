{
    "id": "modal",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Fenêtre modale avec overlay, header, body et footer. Idéal pour confirmations, formulaires, détails.",
    "inputs": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "description": "ID unique pour le ciblage JS",
                "default": ""
            },
            "title": {
                "type": "string",
                "description": "Titre de la modale",
                "nullable": true
            },
            "open": {
                "type": "boolean",
                "description": "Ouverte par défaut",
                "default": false
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "full"
                ],
                "default": "md"
            },
            "closable": {
                "type": "boolean",
                "description": "Afficher le bouton de fermeture",
                "default": true
            },
            "closeOnOverlay": {
                "type": "boolean",
                "description": "Fermer au clic sur l'overlay",
                "default": true
            },
            "closeOnEscape": {
                "type": "boolean",
                "description": "Fermer avec la touche Escape",
                "default": true
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "centered",
                    "drawer-right",
                    "drawer-left"
                ],
                "default": "default"
            },
            "showFooter": {
                "type": "boolean",
                "default": true
            },
            "confirmLabel": {
                "type": "string",
                "default": "Confirmer"
            },
            "cancelLabel": {
                "type": "string",
                "default": "Annuler"
            },
            "confirmVariant": {
                "type": "string",
                "enum": [
                    "primary",
                    "danger",
                    "success"
                ],
                "default": "primary"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "modal",
        "dialog",
        "popup",
        "overlay",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Confirmation",
            "inputs": {
                "id": "confirm-modal",
                "title": "Confirmer la suppression",
                "size": "sm",
                "confirmLabel": "Supprimer",
                "confirmVariant": "danger"
            }
        },
        {
            "name": "Formulaire",
            "inputs": {
                "id": "form-modal",
                "title": "Réserver une formation",
                "size": "lg"
            }
        },
        {
            "name": "Drawer",
            "inputs": {
                "id": "drawer-modal",
                "title": "Filtres",
                "variant": "drawer-right",
                "showFooter": false
            }
        }
    ]
}