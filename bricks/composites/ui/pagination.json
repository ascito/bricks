{
    "id": "pagination",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Navigation paginée pour listes et articles",
    "inputs": {
        "type": "object",
        "properties": {
            "currentPage": {
                "type": "integer",
                "default": 1,
                "description": "Page actuelle"
            },
            "totalPages": {
                "type": "integer",
                "default": 10,
                "description": "Nombre total de pages"
            },
            "baseUrl": {
                "type": "string",
                "default": "?page=",
                "description": "URL de base (ex: \/blog?page= ou \/articles\/page\/)"
            },
            "showPrevNext": {
                "type": "boolean",
                "default": true,
                "description": "Afficher Précédent\/Suivant"
            },
            "showFirstLast": {
                "type": "boolean",
                "default": false,
                "description": "Afficher Premier\/Dernier"
            },
            "maxVisible": {
                "type": "integer",
                "default": 5,
                "description": "Nombre max de pages visibles"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "rounded",
                    "minimal",
                    "bordered"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "align": {
                "type": "string",
                "enum": [
                    "start",
                    "center",
                    "end"
                ],
                "default": "center"
            },
            "labels": {
                "type": "object",
                "default": [],
                "description": "Labels personnalisés (prev, next, first, last)"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "totalPages"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "navigation",
        "pagination",
        "blog"
    ],
    "examples": [
        {
            "name": "Pagination simple",
            "inputs": {
                "currentPage": 3,
                "totalPages": 10
            }
        },
        {
            "name": "Avec premier\/dernier",
            "inputs": {
                "currentPage": 5,
                "totalPages": 20,
                "showFirstLast": true
            }
        },
        {
            "name": "Style arrondi",
            "inputs": {
                "currentPage": 1,
                "totalPages": 5,
                "variant": "rounded"
            }
        }
    ]
}