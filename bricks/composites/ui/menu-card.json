{
    "id": "menu-card",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Carte de menu restaurant avec sections, items et prix",
    "inputs": {
        "type": "object",
        "properties": {
            "title": {
                "type": "string",
                "description": "Titre du menu (ex: Menu du Jour)"
            },
            "subtitle": {
                "type": "string",
                "description": "Sous-titre ou description"
            },
            "price": {
                "type": "string",
                "description": "Prix global du menu (optionnel)"
            },
            "sections": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Titre de section (ex: Entrées)"
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "description": "Nom du plat"
                                    },
                                    "description": {
                                        "type": "string",
                                        "description": "Description"
                                    },
                                    "price": {
                                        "type": "string",
                                        "description": "Prix"
                                    },
                                    "badge": {
                                        "type": "string",
                                        "description": "Badge (Nouveau, Végétarien...)"
                                    },
                                    "badgeVariant": {
                                        "type": "string",
                                        "enum": [
                                            "primary",
                                            "success",
                                            "warning",
                                            "danger"
                                        ],
                                        "default": "primary"
                                    },
                                    "image": {
                                        "type": "string",
                                        "description": "URL image du plat"
                                    },
                                    "unavailable": {
                                        "type": "boolean",
                                        "default": false
                                    }
                                },
                                "required": [
                                    "name"
                                ]
                            }
                        }
                    }
                },
                "description": "Sections du menu"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "elegant",
                    "casual",
                    "minimal"
                ],
                "default": "default"
            },
            "showImages": {
                "type": "boolean",
                "default": false,
                "description": "Afficher les images des plats"
            },
            "columns": {
                "type": "integer",
                "enum": [
                    1,
                    2
                ],
                "default": 1,
                "description": "Nombre de colonnes"
            },
            "priceAlignment": {
                "type": "string",
                "enum": [
                    "right",
                    "inline"
                ],
                "default": "right"
            },
            "dividerStyle": {
                "type": "string",
                "enum": [
                    "none",
                    "dotted",
                    "solid",
                    "dashed"
                ],
                "default": "dotted",
                "description": "Style de ligne entre nom et prix"
            },
            "background": {
                "type": "string",
                "enum": [
                    "none",
                    "light",
                    "dark",
                    "paper"
                ],
                "default": "none"
            },
            "border": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "menu",
        "restaurant",
        "pricing",
        "food",
        "card"
    ],
