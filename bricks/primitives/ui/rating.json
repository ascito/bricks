{
    "id": "rating",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Affichage de note avec étoiles ou autres icônes",
    "inputs": {
        "type": "object",
        "properties": {
            "value": {
                "type": "number",
                "description": "Note actuelle (ex: 4.5)",
                "default": 0
            },
            "max": {
                "type": "integer",
                "default": 5,
                "description": "Nombre maximum d'étoiles"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "color": {
                "type": "string",
                "enum": [
                    "yellow",
                    "orange",
                    "red",
                    "primary",
                    "custom"
                ],
                "default": "yellow"
            },
            "customColor": {
                "type": "string",
                "description": "Couleur CSS personnalisée (si color=custom)"
            },
            "icon": {
                "type": "string",
                "enum": [
                    "star",
                    "heart",
                    "circle",
                    "fire"
                ],
                "default": "star",
                "description": "Type d'icône à afficher"
            },
            "showValue": {
                "type": "boolean",
                "default": false,
                "description": "Afficher la valeur numérique"
            },
            "showMax": {
                "type": "boolean",
                "default": false,
                "description": "Afficher le max (ex: 4.5\/5)"
            },
            "reviewCount": {
                "type": "integer",
                "description": "Nombre d'avis (optionnel)"
            },
            "readonly": {
                "type": "boolean",
                "default": true,
                "description": "Mode lecture seule (pas interactif)"
            },
            "precision": {
                "type": "string",
                "enum": [
                    "full",
                    "half",
                    "quarter"
                ],
                "default": "half",
                "description": "Précision des étoiles partielles"
            },
            "emptyColor": {
                "type": "string",
                "enum": [
                    "gray",
                    "light",
                    "transparent"
                ],
                "default": "gray",
                "description": "Couleur des étoiles vides"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "rating",
        "stars",
        "score",
        "review",
        "feedback"
    ],
    "examples": [
        {
            "name": "Rating simple",
            "description": "5 étoiles avec note 4",
            "inputs": {
                "value": 4
            }
        },
        {
            "name": "Rating avec demi-étoile",
            "description": "Note 4.5 sur 5",
            "inputs": {
                "value": 4.5,
                "showValue": true
            }
        },
        {
            "name": "Rating avec nombre d'avis",
            "description": "Note avec compteur d'avis",
            "inputs": {
                "value": 4.2,
                "showValue": true,
                "reviewCount": 128
            }
        },
        {
            "name": "Rating grand format",
            "description": "Étoiles larges pour hero",
            "inputs": {
                "value": 5,
                "size": "xl",
                "color": "orange"
            }
        },
        {
            "name": "Rating coeurs",
            "description": "Note avec des coeurs",
            "inputs": {
                "value": 3,
                "max": 5,
                "icon": "heart",
                "color": "red"
            }
        },
        {
            "name": "Rating restaurant",
            "description": "Style typique pour restaurant",
            "inputs": {
                "value": 4.7,
                "showValue": true,
                "showMax": true,
                "reviewCount": 256,
                "size": "sm"
            }
        }
    ]
}