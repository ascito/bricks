{
    "id": "tabs",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Onglets pour basculer entre différents contenus",
    "inputs": {
        "type": "object",
        "properties": {
            "tabs": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "description": "Identifiant unique de l'onglet"
                        },
                        "label": {
                            "type": "string",
                            "description": "Texte affiché sur l'onglet"
                        },
                        "icon": {
                            "type": "string",
                            "description": "Icône optionnelle (nom Lucide)"
                        },
                        "badge": {
                            "type": "string",
                            "description": "Badge optionnel (ex: nombre)"
                        }
                    },
                    "required": [
                        "id",
                        "label"
                    ]
                },
                "description": "Liste des onglets"
            },
            "defaultTab": {
                "type": "string",
                "description": "ID de l'onglet actif par défaut (premier si non spécifié)"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "pills",
                    "underline",
                    "boxed"
                ],
                "default": "default",
                "description": "Style visuel des onglets"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "fullWidth": {
                "type": "boolean",
                "default": false,
                "description": "Onglets en pleine largeur"
            },
            "centered": {
                "type": "boolean",
                "default": false,
                "description": "Centrer les onglets"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "tabs"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "navigation",
        "tabs",
        "switch"
    ],
    "examples": [
        {
            "name": "Onglets simples",
            "inputs": {
                "tabs": [
                    {
                        "id": "tab1",
                        "label": "Général"
                    },
                    {
                        "id": "tab2",
                        "label": "Détails"
                    },
                    {
                        "id": "tab3",
                        "label": "Paramètres"
                    }
                ]
            }
        },
        {
            "name": "Onglets style pills",
            "inputs": {
                "tabs": [
                    {
                        "id": "concerts",
                        "label": "Concerts",
                        "badge": "4"
                    },
                    {
                        "id": "ateliers",
                        "label": "Ateliers",
                        "badge": "3"
                    }
                ],
                "variant": "pills",
                "centered": true
            }
        },
        {
            "name": "Onglets underline pleine largeur",
            "inputs": {
                "tabs": [
                    {
                        "id": "all",
                        "label": "Tout"
                    },
                    {
                        "id": "music",
                        "label": "Musique"
                    },
                    {
                        "id": "theatre",
                        "label": "Théâtre"
                    },
                    {
                        "id": "cinema",
                        "label": "Cinéma"
                    }
                ],
                "variant": "underline",
                "fullWidth": true
            }
        }
    ]
}