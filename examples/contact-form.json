{
  "id": "contact-form",
  "name": "Formulaire de Contact",
  "description": "Page de contact avec formulaire, validation et alertes",
  "customCss": ".contact-page { min-height: 100vh; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 2rem; } .contact-container { max-width: 600px; margin: 0 auto; }",
  "bricks": [
    {
      "id": "page",
      "brick": "stack",
      "inputs": {"gap": "lg", "align": "center", "className": "contact-page"},
      "slots": {"children": ["header", "form-card"]}
    },
    {
      "id": "header",
      "brick": "stack",
      "inputs": {"gap": "sm", "align": "center"},
      "slots": {"children": ["title", "subtitle"]}
    },
    {
      "id": "title",
      "brick": "heading",
      "inputs": {"content": "Contactez-nous", "level": 1, "align": "center", "color": "white"}
    },
    {
      "id": "subtitle",
      "brick": "text",
      "inputs": {"content": "Une question ? Un projet ? N'hésitez pas à nous écrire.", "align": "center", "color": "white"}
    },
    {
      "id": "form-card",
      "brick": "card",
      "inputs": {"variant": "elevated", "padding": "lg", "radius": "xl", "className": "contact-container"},
      "slots": {"body": ["alert-success", "contact-form"]}
    },
    {
      "id": "alert-success",
      "brick": "alert",
      "inputs": {
        "variant": "success",
        "title": "Message envoyé !",
        "message": "Nous vous répondrons dans les plus brefs délais.",
        "dismissible": true,
        "visible": false
      }
    },
    {
      "id": "contact-form",
      "brick": "form",
      "inputs": {
        "action": "/api/contact",
        "method": "POST"
      },
      "slots": {"children": ["form-fields", "form-actions"]}
    },
    {
      "id": "form-fields",
      "brick": "stack",
      "inputs": {"gap": "md"},
      "slots": {"children": ["row-name-email", "field-subject", "field-message"]}
    },
    {
      "id": "row-name-email",
      "brick": "grid",
      "inputs": {"columns": 2, "gap": "md"},
      "slots": {"children": ["field-name", "field-email"]}
    },
    {
      "id": "field-name",
      "brick": "form-field",
      "inputs": {
        "label": "Nom complet",
        "name": "name",
        "type": "text",
        "placeholder": "Jean Dupont",
        "required": true
      }
    },
    {
      "id": "field-email",
      "brick": "form-field",
      "inputs": {
        "label": "Email",
        "name": "email",
        "type": "email",
        "placeholder": "jean@exemple.com",
        "required": true
      }
    },
    {
      "id": "field-subject",
      "brick": "form-field",
      "inputs": {
        "label": "Sujet",
        "name": "subject",
        "type": "select",
        "placeholder": "Choisissez un sujet",
        "required": true,
        "options": [
          {"value": "general", "label": "Question générale"},
          {"value": "support", "label": "Support technique"},
          {"value": "partnership", "label": "Partenariat"},
          {"value": "other", "label": "Autre"}
        ]
      }
    },
    {
      "id": "field-message",
      "brick": "form-field",
      "inputs": {
        "label": "Message",
        "name": "message",
        "type": "textarea",
        "placeholder": "Votre message...",
        "required": true,
        "rows": 5
      }
    },
    {
      "id": "form-actions",
      "brick": "stack",
      "inputs": {"direction": "horizontal", "gap": "md", "justify": "between", "align": "center"},
      "slots": {"children": ["checkbox-newsletter", "submit-btn"]}
    },
    {
      "id": "checkbox-newsletter",
      "brick": "checkbox",
      "inputs": {
        "name": "newsletter",
        "label": "S'inscrire à la newsletter"
      }
    },
    {
      "id": "submit-btn",
      "brick": "button",
      "inputs": {
        "label": "Envoyer le message",
        "variant": "primary",
        "size": "lg",
        "type": "submit",
        "icon": "send"
      }
    }
  ]
}
