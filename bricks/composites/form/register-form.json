{
    "id": "register-form",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Formulaire d'inscription avec nom, email, mot de passe, confirmation et options sociales",
    "inputs": {
        "type": "object",
        "properties": {
            "action": {
                "type": "string",
                "default": "\/register",
                "description": "URL de soumission du formulaire"
            },
            "method": {
                "type": "string",
                "enum": [
                    "POST",
                    "GET"
                ],
                "default": "POST"
            },
            "title": {
                "type": "string",
                "default": "Créer un compte"
            },
            "subtitle": {
                "type": "string",
                "default": "",
                "description": "Texte sous le titre"
            },
            "showTitle": {
                "type": "boolean",
                "default": true
            },
            "showName": {
                "type": "boolean",
                "default": true
            },
            "nameStyle": {
                "type": "string",
                "enum": [
                    "single",
                    "split"
                ],
                "default": "single",
                "description": "single = un champ \"Nom complet\", split = prénom + nom séparés"
            },
            "nameLabel": {
                "type": "string",
                "default": "Nom complet"
            },
            "namePlaceholder": {
                "type": "string",
                "default": "Jean Dupont"
            },
            "firstNameLabel": {
                "type": "string",
                "default": "Prénom"
            },
            "firstNamePlaceholder": {
                "type": "string",
                "default": "Jean"
            },
            "lastNameLabel": {
                "type": "string",
                "default": "Nom"
            },
            "lastNamePlaceholder": {
                "type": "string",
                "default": "Dupont"
            },
            "emailLabel": {
                "type": "string",
                "default": "Email"
            },
            "emailPlaceholder": {
                "type": "string",
                "default": "votre@email.com"
            },
            "passwordLabel": {
                "type": "string",
                "default": "Mot de passe"
            },
            "passwordPlaceholder": {
                "type": "string",
                "default": "Créez un mot de passe"
            },
            "confirmLabel": {
                "type": "string",
                "default": "Confirmer le mot de passe"
            },
            "confirmPlaceholder": {
                "type": "string",
                "default": "Confirmez votre mot de passe"
            },
            "showStrength": {
                "type": "boolean",
                "default": true
            },
            "passwordHint": {
                "type": "string",
                "default": "Minimum 8 caractères avec majuscules, chiffres et symboles"
            },
            "minPasswordLength": {
                "type": "integer",
                "default": 8
            },
            "showTerms": {
                "type": "boolean",
                "default": true
            },
            "termsLabel": {
                "type": "string",
                "default": "J'accepte les"
            },
            "termsLinkLabel": {
                "type": "string",
                "default": "conditions d'utilisation"
            },
            "termsUrl": {
                "type": "string",
                "default": "\/terms"
            },
            "privacyLinkLabel": {
                "type": "string",
                "default": "politique de confidentialité"
            },
            "privacyUrl": {
                "type": "string",
                "default": "\/privacy"
            },
            "showNewsletter": {
                "type": "boolean",
                "default": false
            },
            "newsletterLabel": {
                "type": "string",
                "default": "Je souhaite recevoir la newsletter"
            },
            "submitLabel": {
                "type": "string",
                "default": "Créer mon compte"
            },
            "showLoginLink": {
                "type": "boolean",
                "default": true
            },
            "loginLabel": {
                "type": "string",
                "default": "Déjà un compte ?"
            },
            "loginLinkLabel": {
                "type": "string",
                "default": "Se connecter"
            },
            "loginUrl": {
                "type": "string",
                "default": "\/login"
            },
            "showSocialLogin": {
                "type": "boolean",
                "default": false
            },
            "socialProviders": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "default": [
                    "google",
                    "github"
                ]
            },
            "socialDividerText": {
                "type": "string",
                "default": "ou s'inscrire avec"
            },
            "errors": {
                "type": "object",
                "description": "Erreurs de validation par champ",
                "additionalProperties": {
                    "type": "string"
                }
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "card",
                    "minimal"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "auth",
        "register",
        "signup",
        "form",
        "authentication"
    ],
    "examples": [
        {
            "name": "Inscription simple",
            "inputs": {
                "title": "Créer un compte",
                "showName": true,
                "showStrength": true
            }
        },
        {
            "name": "Inscription avec prénom\/nom séparés",
            "inputs": {
                "title": "Rejoignez-nous",
                "subtitle": "Créez votre compte en quelques secondes",
                "nameStyle": "split",
                "showTerms": true,
                "showNewsletter": true
            }
        },
        {
            "name": "Inscription avec social login",
            "inputs": {
                "title": "Inscription",
                "showSocialLogin": true,
                "socialProviders": [
                    "google",
                    "github",
                    "facebook"
                ],
                "variant": "card"
            }
        }
    ]
}