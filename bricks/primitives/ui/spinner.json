{
    "id": "spinner",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Indicateur de chargement anim√© (cercle, dots, pulse)",
    "inputs": {
        "type": "object",
        "properties": {
            "variant": {
                "type": "string",
                "enum": [
                    "circle",
                    "dots",
                    "pulse",
                    "bars"
                ],
                "default": "circle",
                "description": "Type de spinner"
            },
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "color": {
                "type": "string",
                "enum": [
                    "primary",
                    "secondary",
                    "white",
                    "current"
                ],
                "default": "primary"
            },
            "label": {
                "type": "string",
                "description": "Texte optionnel sous le spinner"
            },
            "overlay": {
                "type": "boolean",
                "default": false,
                "description": "Afficher sur un overlay semi-transparent"
            },
            "centered": {
                "type": "boolean",
                "default": false,
                "description": "Centrer dans le conteneur parent"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "loading",
        "spinner",
        "feedback",
        "animation"
    ],
    "examples": [
        {
            "name": "Spinner simple",
            "inputs": []
        },
        {
            "name": "Spinner dots large",
            "inputs": {
                "variant": "dots",
                "size": "lg",
                "color": "primary"
            }
        },
        {
            "name": "Spinner avec texte",
            "inputs": {
                "variant": "circle",
                "label": "Chargement..."
            }
        },
        {
            "name": "Spinner overlay",
            "inputs": {
                "variant": "pulse",
                "overlay": true,
                "label": "Veuillez patienter"
            }
        }
    ]
}