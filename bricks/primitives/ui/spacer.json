{
    "id": "spacer",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Espace vide configurable pour séparer les éléments",
    "inputs": {
        "type": "object",
        "properties": {
            "size": {
                "type": "string",
                "enum": [
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "2xl",
                    "3xl",
                    "4xl"
                ],
                "default": "md",
                "description": "Taille prédéfinie de l'espace"
            },
            "height": {
                "type": "string",
                "description": "Hauteur personnalisée (ex: 100px, 2rem)"
            },
            "axis": {
                "type": "string",
                "enum": [
                    "vertical",
                    "horizontal"
                ],
                "default": "vertical",
                "description": "Direction de l'espace"
            },
            "responsive": {
                "type": "object",
                "description": "Tailles responsives {sm, md, lg}",
                "properties": {
                    "sm": {
                        "type": "string"
                    },
                    "md": {
                        "type": "string"
                    },
                    "lg": {
                        "type": "string"
                    }
                }
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "spacer",
        "space",
        "separator",
        "layout"
    ],
    "examples": [
        {
            "name": "Spacer medium",
            "inputs": {
                "size": "md"
            }
        },
        {
            "name": "Grand espace",
            "inputs": {
                "size": "2xl"
            }
        },
        {
            "name": "Hauteur personnalisée",
            "inputs": {
                "height": "100px"
            }
        },
        {
            "name": "Spacer horizontal",
            "inputs": {
                "size": "lg",
                "axis": "horizontal"
            }
        }
    ]
}