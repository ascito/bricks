{
    "id": "form",
    "version": "1.0.0",
    "category": "form.composite",
    "description": "Formulaire HTML avec gestion des méthodes et validation",
    "inputs": {
        "type": "object",
        "properties": {
            "action": {
                "type": "string",
                "default": "",
                "description": "URL de soumission du formulaire"
            },
            "method": {
                "type": "string",
                "enum": [
                    "GET",
                    "POST",
                    "PUT",
                    "PATCH",
                    "DELETE"
                ],
                "default": "POST"
            },
            "enctype": {
                "type": "string",
                "enum": [
                    "application\/x-www-form-urlencoded",
                    "multipart\/form-data",
                    "text\/plain"
                ],
                "default": "application\/x-www-form-urlencoded"
            },
            "novalidate": {
                "type": "boolean",
                "default": false,
                "description": "Désactive la validation HTML5 native"
            },
            "autocomplete": {
                "type": "string",
                "enum": [
                    "on",
                    "off"
                ],
                "default": "on"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            },
            "data": {
                "type": "object",
                "description": "Attributs data-* personnalisés",
                "default": []
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "form",
        "interactive",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Formulaire simple",
            "inputs": {
                "action": "\/api\/submit",
                "method": "POST"
            }
        },
        {
            "name": "Formulaire avec upload",
            "inputs": {
                "action": "\/api\/upload",
                "method": "POST",
                "enctype": "multipart\/form-data"
            }
        }
    ]
}