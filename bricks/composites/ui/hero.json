{
    "id": "hero",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Section hero pleine largeur avec image de fond et overlay",
    "inputs": {
        "type": "object",
        "properties": {
            "image": {
                "type": "string",
                "description": "URL de l'image de fond"
            },
            "imageAlt": {
                "type": "string",
                "default": ""
            },
            "video": {
                "type": "string",
                "description": "URL vidéo de fond (optionnel, priorité sur image)"
            },
            "background": {
                "type": "string",
                "enum": [
                    "none",
                    "gradient",
                    "primary",
                    "secondary",
                    "dark"
                ],
                "default": "none",
                "description": "Fond sans image (gradient, primary, secondary, dark)"
            },
            "gradientFrom": {
                "type": "string",
                "default": "#3b82f6",
                "description": "Couleur de départ du dégradé"
            },
            "gradientTo": {
                "type": "string",
                "default": "#1d4ed8",
                "description": "Couleur d'arrivée du dégradé"
            },
            "gradientDirection": {
                "type": "string",
                "enum": [
                    "to-r",
                    "to-l",
                    "to-b",
                    "to-t",
                    "to-br",
                    "to-bl",
                    "to-tr",
                    "to-tl"
                ],
                "default": "to-br",
                "description": "Direction du dégradé"
            },
            "overlay": {
                "type": "string",
                "enum": [
                    "none",
                    "light",
                    "dark",
                    "gradient",
                    "primary"
                ],
                "default": "dark",
                "description": "Type d'overlay sur l'image"
            },
            "overlayOpacity": {
                "type": "number",
                "default": 0.5,
                "description": "Opacité de l'overlay (0-1)"
            },
            "eyebrow": {
                "type": "string",
                "description": "Petit texte au-dessus du titre"
            },
            "title": {
                "type": "string",
                "description": "Titre principal"
            },
            "titleSize": {
                "type": "string",
                "enum": [
                    "lg",
                    "xl",
                    "2xl",
                    "3xl",
                    "4xl",
                    "5xl"
                ],
                "default": "4xl"
            },
            "subtitle": {
                "type": "string",
                "description": "Sous-titre ou description"
            },
            "cta": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string"
                    },
                    "variant": {
                        "type": "string",
                        "default": "primary"
                    }
                }
            },
            "ctaSecondary": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string"
                    }
                }
            },
            "align": {
                "type": "string",
                "enum": [
                    "left",
                    "center",
                    "right"
                ],
                "default": "center"
            },
            "verticalAlign": {
                "type": "string",
                "enum": [
                    "top",
                    "center",
                    "bottom"
                ],
                "default": "center"
            },
            "height": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "screen",
                    "auto"
                ],
                "default": "lg",
                "description": "Hauteur du hero"
            },
            "minHeight": {
                "type": "string",
                "description": "Hauteur minimum CSS personnalisée"
            },
            "contentWidth": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "full"
                ],
                "default": "lg"
            },
            "textColor": {
                "type": "string",
                "enum": [
                    "light",
                    "dark",
                    "auto"
                ],
                "default": "light"
            },
            "parallax": {
                "type": "boolean",
                "default": false,
                "description": "Effet parallax sur l'image"
            },
            "scrollIndicator": {
                "type": "boolean",
                "default": false,
                "description": "Affiche une flèche animée en bas pour indiquer de scroller"
            },
            "scrollIndicatorTarget": {
                "type": "string",
                "default": "",
                "description": "ID de la section cible (ex: #section-suivante)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "title"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "hero",
        "banner",
        "header",
        "landing",
        "fullwidth"
    ],
    "examples": [
