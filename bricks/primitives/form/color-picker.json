{
    "id": "color-picker",
    "version": "1.0.0",
    "category": "form.primitive",
    "description": "Sélecteur de couleur avec palette optionnelle",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "value",
            "attribute": "data-value",
            "type": "string"
        },
        "properties": {
            "name": {
                "type": "string",
                "description": "Nom du champ"
            },
            "label": {
                "type": "string",
                "description": "Label du champ"
            },
            "value": {
                "type": "string",
                "default": "#3b82f6",
                "description": "Couleur initiale (hex)."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding. Génère data-value."
            },
            "presets": {
                "type": "array",
                "description": "Palette de couleurs prédéfinies",
                "items": {
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    }
                }
            },
            "showValue": {
                "type": "boolean",
                "default": true,
                "description": "Afficher la valeur hex"
            },
            "showPreview": {
                "type": "boolean",
                "default": true,
                "description": "Afficher l'aperçu de couleur"
            },
            "allowCustom": {
                "type": "boolean",
                "default": true,
                "description": "Permettre les couleurs personnalisées"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "inline",
                    "compact"
                ],
                "default": "default"
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "color",
        "picker",
        "form",
        "input"
    ],
    "examples": [
        {
            "name": "Color picker simple",
            "inputs": {
                "name": "primaryColor",
                "label": "Couleur principale",
                "value": "#3b82f6"
            }
        },
        {
            "name": "Avec palette prédéfinie",
            "inputs": {
                "name": "themeColor",
                "label": "Couleur du thème",
                "value": "#22c55e",
                "presets": [
                    {
                        "value": "#ef4444",
                        "label": "Rouge"
                    },
                    {
                        "value": "#f97316",
                        "label": "Orange"
                    },
                    {
                        "value": "#eab308",
                        "label": "Jaune"
                    },
                    {
                        "value": "#22c55e",
                        "label": "Vert"
                    },
                    {
                        "value": "#3b82f6",
                        "label": "Bleu"
                    },
                    {
                        "value": "#8b5cf6",
                        "label": "Violet"
                    }
                ]
            }
        },
        {
            "name": "Mode compact",
            "inputs": {
                "name": "accentColor",
                "value": "#8b5cf6",
                "variant": "compact",
                "showValue": false
            }
        }
    ]
}