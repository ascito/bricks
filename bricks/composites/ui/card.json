{
    "id": "card",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Carte avec header, body et footer optionnels",
    "inputs": {
        "type": "object",
        "properties": {
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "outlined",
                    "elevated",
                    "filled"
                ],
                "default": "default"
            },
            "padding": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "radius": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md"
            },
            "hoverable": {
                "type": "boolean",
                "default": false,
                "description": "Effet au survol"
            },
            "clickable": {
                "type": "boolean",
                "default": false,
                "description": "Apparence cliquable"
            },
            "width": {
                "type": "string",
                "nullable": true,
                "description": "Largeur fixe (ex: 400px, 100%)"
            },
            "minWidth": {
                "type": "string",
                "nullable": true,
                "description": "Largeur minimum (ex: 300px)"
            },
            "maxWidth": {
                "type": "string",
                "nullable": true,
                "description": "Largeur maximum (ex: 500px)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            },
            "data": {
                "type": "object",
                "description": "Attributs data-* personnalisés",
                "default": []
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "composite",
        "card",
        "container",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Carte simple",
            "inputs": []
        },
        {
            "name": "Carte avec ombre",
            "inputs": {
                "variant": "elevated",
                "hoverable": true
            }
        },
        {
            "name": "Carte bordée",
            "inputs": {
                "variant": "outlined",
                "radius": "lg"
            }
        }
    ]
}