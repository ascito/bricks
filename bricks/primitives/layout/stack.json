{
    "id": "stack",
    "version": "1.0.0",
    "category": "layout.primitive",
    "description": "Empilement vertical ou horizontal avec espacement",
    "inputs": {
        "type": "object",
        "properties": {
            "direction": {
                "type": "string",
                "enum": [
                    "vertical",
                    "horizontal"
                ],
                "default": "vertical"
            },
            "gap": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "2xl"
                ],
                "default": "md",
                "description": "Espacement entre les éléments"
            },
            "align": {
                "type": "string",
                "enum": [
                    "start",
                    "center",
                    "end",
                    "stretch",
                    "baseline"
                ],
                "default": "stretch",
                "description": "Alignement perpendiculaire"
            },
            "justify": {
                "type": "string",
                "enum": [
                    "start",
                    "center",
                    "end",
                    "between",
                    "around",
                    "evenly"
                ],
                "default": "start",
                "description": "Justification dans la direction principale"
            },
            "wrap": {
                "type": "boolean",
                "default": false,
                "description": "Autoriser le retour à la ligne"
            },
            "reverse": {
                "type": "boolean",
                "default": false,
                "description": "Inverser l'ordre"
            },
            "tag": {
                "type": "string",
                "enum": [
                    "div",
                    "section",
                    "nav",
                    "ul",
                    "ol",
                    "header",
                    "footer"
                ],
                "default": "div"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "layout",
        "primitive",
        "flex",
        "stack",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Stack vertical",
            "inputs": {
                "gap": "lg"
            }
        },
        {
            "name": "Stack horizontal centré",
            "inputs": {
                "direction": "horizontal",
                "align": "center",
                "gap": "md"
            }
        },
        {
            "name": "Navigation horizontale espacée",
            "inputs": {
                "direction": "horizontal",
                "justify": "between",
                "align": "center",
                "tag": "nav"
            }
        }
    ]
}