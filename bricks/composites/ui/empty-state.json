{
    "id": "empty-state",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "État vide\/aucun résultat avec illustration, message et action",
    "inputs": {
        "type": "object",
        "properties": {
            "icon": {
                "type": "string",
                "enum": [
                    "search",
                    "inbox",
                    "file",
                    "folder",
                    "users",
                    "shopping-cart",
                    "calendar",
                    "image",
                    "message",
                    "bell",
                    "custom"
                ],
                "default": "inbox"
            },
            "customIcon": {
                "type": "string",
                "description": "SVG personnalisé si icon=custom"
            },
            "image": {
                "type": "string",
                "description": "URL image\/illustration à la place de l'icône"
            },
            "title": {
                "type": "string",
                "default": "Aucun résultat"
            },
            "description": {
                "type": "string",
                "default": "Il n'y a rien à afficher pour le moment."
            },
            "action": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string"
                    },
                    "variant": {
                        "type": "string",
                        "enum": [
                            "primary",
                            "secondary",
                            "outline"
                        ]
                    }
                }
            },
            "secondaryAction": {
                "type": "object",
                "properties": {
                    "label": {
                        "type": "string"
                    },
                    "href": {
                        "type": "string"
                    }
                }
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "card",
                    "minimal"
                ],
                "default": "default"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "title"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "empty",
        "state",
        "no-results",
        "placeholder",
        "illustration"
    ],
    "examples": [
        {
            "name": "Recherche vide",
            "inputs": {
                "icon": "search",
                "title": "Aucun résultat",
                "description": "Essayez de modifier vos critères de recherche.",
                "action": {
                    "label": "Effacer les filtres",
                    "href": "#",
                    "variant": "outline"
                }
            }
        },
        {
            "name": "Inbox vide",
            "inputs": {
                "icon": "inbox",
                "title": "Votre boîte est vide",
                "description": "Vous n'avez pas encore reçu de messages."
            }
        },
        {
            "name": "Panier vide",
            "inputs": {
                "icon": "shopping-cart",
                "title": "Votre panier est vide",
                "description": "Parcourez notre catalogue pour ajouter des articles.",
                "action": {
                    "label": "Voir les produits",
                    "href": "\/shop",
                    "variant": "primary"
                }
            }
        },
        {
            "name": "Avec illustration",
            "inputs": {
                "image": "https:\/\/illustrations.dev\/empty.svg",
                "title": "Commencez à créer",
                "description": "Créez votre premier projet pour démarrer.",
                "action": {
                    "label": "Créer un projet",
                    "href": "#",
                    "variant": "primary"
                }
            }
        }
    ]
}