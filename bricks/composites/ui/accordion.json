{
    "id": "accordion",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Accordéon pour afficher du contenu dépliable. Idéal pour FAQ, programmes, détails.",
    "inputs": {
        "type": "object",
        "properties": {
            "items": {
                "type": "array",
                "description": "Liste des éléments de l'accordéon",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "Titre de la section"
                        },
                        "content": {
                            "type": "string",
                            "description": "Contenu (supporte HTML)"
                        },
                        "open": {
                            "type": "boolean",
                            "default": false,
                            "description": "Ouvert par défaut"
                        },
                        "icon": {
                            "type": "string",
                            "nullable": true,
                            "description": "Icône optionnelle"
                        }
                    },
                    "required": [
                        "title",
                        "content"
                    ]
                },
                "default": []
            },
            "allowMultiple": {
                "type": "boolean",
                "description": "Permet d'ouvrir plusieurs sections simultanément",
                "default": false
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "bordered",
                    "separated",
                    "minimal"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "iconPosition": {
                "type": "string",
                "enum": [
                    "left",
                    "right"
                ],
                "default": "right"
            },
            "className": {
                "type": "string",
                "default": ""
            }
        },
        "required": [
            "items"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "accordion",
        "faq",
        "collapse",
        "expandable",
        "details"
    ],
    "examples": [
        {
            "name": "FAQ simple",
            "inputs": {
                "items": [
                    {
                        "title": "Comment réserver une formation ?",
                        "content": "Vous pouvez réserver directement en ligne via notre formulaire de réservation ou nous contacter par téléphone."
                    },
                    {
                        "title": "Quels sont les moyens de paiement ?",
                        "content": "Nous acceptons les paiements par carte bancaire, virement et PayPal. Le paiement en plusieurs fois est disponible."
                    },
                    {
                        "title": "Puis-je annuler ma réservation ?",
                        "content": "Oui, l'annulation est gratuite jusqu'à 14 jours avant la formation. Au-delà, des frais peuvent s'appliquer."
                    }
                ]
            }
        },
        {
            "name": "Programme de formation",
            "inputs": {
                "variant": "separated",
                "items": [
                    {
                        "title": "Jour 1 - Les bases",
                        "content": "<ul><li>Installation et configuration<\/li><li>Architecture MVC<\/li><li>Routing et Controllers<\/li><\/ul>",
                        "open": true
                    },
                    {
                        "title": "Jour 2 - Base de données",
                        "content": "<ul><li>Eloquent ORM<\/li><li>Migrations<\/li><li>Relations<\/li><\/ul>"
                    },
                    {
                        "title": "Jour 3 - Authentification",
                        "content": "<ul><li>Auth scaffolding<\/li><li>Middleware<\/li><li>Politiques<\/li><\/ul>"
                    }
                ]
            }
        },
        {
            "name": "Accordéon minimal",
            "inputs": {
                "variant": "minimal",
                "allowMultiple": true,
                "items": [
                    {
                        "title": "Section 1",
                        "content": "Contenu de la section 1"
                    },
                    {
                        "title": "Section 2",
                        "content": "Contenu de la section 2"
                    }
                ]
            }
        }
    ]
}