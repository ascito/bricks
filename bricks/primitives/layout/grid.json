{
    "id": "grid",
    "version": "1.0.0",
    "category": "layout.primitive",
    "description": "Grille CSS responsive",
    "inputs": {
        "type": "object",
        "properties": {
            "columns": {
                "type": "integer",
                "default": 1,
                "description": "Nombre de colonnes (mobile first)"
            },
            "columnsSm": {
                "type": "integer",
                "nullable": true,
                "description": "Colonnes à partir de 640px"
            },
            "columnsMd": {
                "type": "integer",
                "nullable": true,
                "description": "Colonnes à partir de 768px"
            },
            "columnsLg": {
                "type": "integer",
                "nullable": true,
                "description": "Colonnes à partir de 1024px"
            },
            "columnsXl": {
                "type": "integer",
                "nullable": true,
                "description": "Colonnes à partir de 1280px"
            },
            "gap": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "2xl"
                ],
                "default": "md"
            },
            "rowGap": {
                "type": "string",
                "enum": [
                    "none",
                    "xs",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "nullable": true,
                "description": "Espacement vertical (défaut: même que gap)"
            },
            "minChildWidth": {
                "type": "string",
                "nullable": true,
                "description": "Largeur minimum des enfants pour auto-fit (ex: 200px)"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "layout",
        "primitive",
        "grid",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Grille 3 colonnes fixe",
            "inputs": {
                "columns": 3,
                "gap": "lg"
            }
        },
        {
            "name": "Grille responsive (1→2→3 colonnes)",
            "inputs": {
                "columns": 1,
                "columnsMd": 2,
                "columnsLg": 3,
                "gap": "lg"
            }
        },
        {
            "name": "Grille responsive auto",
            "inputs": {
                "minChildWidth": "250px",
                "gap": "md"
            }
        }
    ]
}