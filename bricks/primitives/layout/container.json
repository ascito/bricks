{
    "id": "container",
    "version": "1.0.0",
    "category": "layout.primitive",
    "description": "Conteneur avec largeur maximale et centrage",
    "inputs": {
        "type": "object",
        "properties": {
            "maxWidth": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "2xl",
                    "full",
                    "prose"
                ],
                "default": "lg",
                "description": "Largeur maximale"
            },
            "padding": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl"
                ],
                "default": "md",
                "description": "Padding horizontal"
            },
            "center": {
                "type": "boolean",
                "default": true,
                "description": "Centrer le conteneur"
            },
            "tag": {
                "type": "string",
                "enum": [
                    "div",
                    "section",
                    "article",
                    "main",
                    "aside",
                    "header",
                    "footer"
                ],
                "default": "div"
            },
            "background": {
                "type": "string",
                "enum": [
                    "none",
                    "white",
                    "light",
                    "dark",
                    "primary"
                ],
                "default": "none",
                "description": "Couleur de fond"
            },
            "paddingY": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "xl",
                    "2xl"
                ],
                "default": "none",
                "description": "Padding vertical"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "nullable": true
            }
        },
        "required": []
    },
    "tags": [
        "layout",
        "primitive",
        "container",
        "accepts:children"
    ],
    "examples": [
        {
            "name": "Conteneur standard",
            "inputs": []
        },
        {
            "name": "Conteneur Ã©troit pour texte",
            "inputs": {
                "maxWidth": "prose",
                "padding": "lg"
            }
        },
        {
            "name": "Section pleine largeur",
            "inputs": {
                "maxWidth": "full",
                "tag": "section"
            }
        }
    ]
}