{
    "id": "dropdown",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Menu contextuel déroulant avec items, séparateurs et sous-menus",
    "inputs": {
        "type": "object",
        "properties": {
            "items": {
                "type": "array",
                "description": "Items du menu [{label, href?, icon?, disabled?, danger?, divider?, items?}]",
                "items": {
                    "type": "object",
                    "properties": {
                        "label": {
                            "type": "string"
                        },
                        "href": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string"
                        },
                        "disabled": {
                            "type": "boolean"
                        },
                        "danger": {
                            "type": "boolean"
                        },
                        "divider": {
                            "type": "boolean"
                        },
                        "items": {
                            "type": "array",
                            "description": "Sous-menu"
                        }
                    }
                }
            },
            "position": {
                "type": "string",
                "enum": [
                    "bottom-start",
                    "bottom-end",
                    "top-start",
                    "top-end",
                    "left",
                    "right"
                ],
                "default": "bottom-start"
            },
            "trigger": {
                "type": "string",
                "enum": [
                    "click",
                    "hover"
                ],
                "default": "click"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "width": {
                "type": "string",
                "enum": [
                    "auto",
                    "trigger",
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "auto",
                "description": "Largeur du menu (auto, trigger=même que trigger, sm\/md\/lg=fixe)"
            },
            "closeOnSelect": {
                "type": "boolean",
                "default": true
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "items"
        ],
        "slots": {
            "trigger": {
                "description": "Élément déclencheur (bouton, lien...)"
            }
        }
    },
    "tags": [
        "ui",
        "composite",
        "dropdown",
        "menu",
        "popover",
        "contextual",
        "actions"
    ],
    "examples": [
        {
            "name": "Dropdown actions",
            "inputs": {
                "items": [
                    {
                        "label": "Modifier",
                        "icon": "edit"
                    },
                    {
                        "label": "Dupliquer",
                        "icon": "copy"
                    },
                    {
                        "divider": true
                    },
                    {
                        "label": "Supprimer",
                        "icon": "trash",
                        "danger": true
                    }
                ]
            }
        },
        {
            "name": "Dropdown avec sous-menu",
            "inputs": {
                "items": [
                    {
                        "label": "Partager",
                        "icon": "share",
                        "items": [
                            {
                                "label": "Email",
                                "href": "#"
                            },
                            {
                                "label": "Twitter",
                                "href": "#"
                            },
                            {
                                "label": "Facebook",
                                "href": "#"
                            }
                        ]
                    },
                    {
                        "divider": true
                    },
                    {
                        "label": "Exporter",
                        "icon": "download"
                    }
                ]
            }
        },
        {
            "name": "Dropdown hover",
            "inputs": {
                "trigger": "hover",
                "position": "bottom-end",
                "items": [
                    {
                        "label": "Option 1",
                        "href": "#"
                    },
                    {
                        "label": "Option 2",
                        "href": "#"
                    },
                    {
                        "label": "Option 3",
                        "href": "#"
                    }
                ]
            }
        }
    ]
}