{
    "id": "table",
    "version": "1.0.0",
    "category": "ui.composite",
    "description": "Tableau de données avec headers et lignes",
    "inputs": {
        "type": "object",
        "properties": {
            "columns": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "key": {
                            "type": "string",
                            "description": "Clé pour accéder à la donnée dans row"
                        },
                        "label": {
                            "type": "string",
                            "description": "Label de la colonne"
                        },
                        "align": {
                            "type": "string",
                            "enum": [
                                "left",
                                "center",
                                "right"
                            ],
                            "default": "left"
                        },
                        "width": {
                            "type": "string",
                            "description": "Largeur CSS (auto, 100px, 20%, etc.)"
                        }
                    }
                },
                "description": "Définition des colonnes"
            },
            "rows": {
                "type": "array",
                "items": {
                    "type": "object",
                    "description": "Données de la ligne (clés correspondent aux columns.key)"
                },
                "description": "Données des lignes"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "striped",
                    "bordered",
                    "minimal"
                ],
                "default": "default"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "hover": {
                "type": "boolean",
                "default": true,
                "description": "Highlight au survol des lignes"
            },
            "stickyHeader": {
                "type": "boolean",
                "default": false,
                "description": "Header fixe au scroll"
            },
            "caption": {
                "type": "string",
                "description": "Légende du tableau"
            },
            "emptyMessage": {
                "type": "string",
                "default": "Aucune donnée",
                "description": "Message si pas de données"
            },
            "responsive": {
                "type": "boolean",
                "default": true,
                "description": "Scroll horizontal sur mobile"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": [
            "columns",
            "rows"
        ]
    },
    "tags": [
        "ui",
        "composite",
        "table",
        "data",
        "grid",
        "rows"
    ],
    "examples": [
        {
            "name": "Tableau simple",
            "inputs": {
                "columns": [
                    {
                        "key": "name",
                        "label": "Nom"
                    },
                    {
                        "key": "role",
                        "label": "Rôle"
                    },
                    {
                        "key": "email",
                        "label": "Email"
                    }
                ],
                "rows": [
                    {
                        "name": "Alice Martin",
                        "role": "Développeur",
                        "email": "alice@example.com"
                    },
                    {
                        "name": "Bob Dupont",
                        "role": "Designer",
                        "email": "bob@example.com"
                    },
                    {
                        "name": "Claire Durand",
                        "role": "Product Manager",
                        "email": "claire@example.com"
                    }
                ]
            }
        },
        {
            "name": "Tableau striped avec prix",
            "inputs": {
                "variant": "striped",
                "columns": [
                    {
                        "key": "text",
                        "label": "Service"
                    },
                    {
                        "key": "description",
                        "label": "Description"
                    },
                    {
                        "key": "value",
                        "label": "Prix",
                        "align": "right"
                    }
                ],
                "rows": [
                    {
                        "text": "Formation Laravel",
                        "description": "3 jours intensifs",
                        "value": "1 500 €"
                    },
                    {
                        "text": "Formation React",
                        "description": "2 jours",
                        "value": "1 200 €"
                    },
                    {
                        "text": "Formation DevOps",
                        "description": "4 jours",
                        "value": "2 000 €"
                    }
                ]
            }
        },
        {
            "name": "Tableau bordered",
            "inputs": {
                "variant": "bordered",
                "caption": "Liste des participants",
                "columns": [
                    {
                        "key": "id",
                        "label": "#",
                        "width": "50px",
                        "align": "center"
                    },
                    {
                        "key": "name",
                        "label": "Participant"
                    },
                    {
                        "key": "status",
                        "label": "Statut",
                        "align": "center"
                    }
                ],
                "rows": [
                    {
                        "id": "1",
                        "name": "Jean Dupont",
                        "status": "Confirmé"
                    },
                    {
                        "id": "2",
                        "name": "Marie Martin",
                        "status": "En attente"
                    },
                    {
                        "id": "3",
                        "name": "Pierre Durand",
                        "status": "Confirmé"
                    }
                ]
            }
        }
    ]
}