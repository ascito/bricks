{
    "id": "skeleton",
    "version": "1.0.0",
    "category": "ui.primitive",
    "description": "Placeholder de chargement animé pour loading states",
    "inputs": {
        "type": "object",
        "properties": {
            "variant": {
                "type": "string",
                "enum": [
                    "text",
                    "circular",
                    "rectangular",
                    "card",
                    "avatar",
                    "button"
                ],
                "default": "text"
            },
            "width": {
                "type": "string",
                "default": "100%",
                "description": "Largeur CSS (100%, 200px, etc.)"
            },
            "height": {
                "type": "string",
                "description": "Hauteur CSS (auto par défaut selon variant)"
            },
            "lines": {
                "type": "integer",
                "default": 1,
                "description": "Nombre de lignes (pour variant=text)"
            },
            "animation": {
                "type": "string",
                "enum": [
                    "pulse",
                    "wave",
                    "none"
                ],
                "default": "pulse"
            },
            "rounded": {
                "type": "string",
                "enum": [
                    "none",
                    "sm",
                    "md",
                    "lg",
                    "full"
                ],
                "default": "md"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "skeleton",
        "loading",
        "placeholder",
        "shimmer"
    ],
    "examples": [
        {
            "name": "Texte loading",
            "inputs": {
                "variant": "text",
                "lines": 3
            }
        },
        {
            "name": "Avatar loading",
            "inputs": {
                "variant": "avatar",
                "width": "48px"
            }
        },
        {
            "name": "Card loading",
            "inputs": {
                "variant": "card"
            }
        },
        {
            "name": "Image loading",
            "inputs": {
                "variant": "rectangular",
                "width": "100%",
                "height": "200px"
            }
        }
    ]
}