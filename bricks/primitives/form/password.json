{
    "id": "password",
    "version": "1.0.0",
    "category": "form.primitive",
    "description": "Champ mot de passe avec toggle de visibilité et indicateur de force",
    "inputs": {
        "type": "object",
        "binding": {
            "property": "value",
            "attribute": "data-value",
            "type": "string"
        },
        "properties": {
            "name": {
                "type": "string",
                "default": "password",
                "description": "Nom du champ"
            },
            "label": {
                "type": "string",
                "description": "Label du champ"
            },
            "placeholder": {
                "type": "string",
                "default": "••••••••"
            },
            "value": {
                "type": "string",
                "description": "Valeur initiale."
            },
            "bind": {
                "type": "string",
                "nullable": true,
                "description": "Chemin binding. Génère data-value."
            },
            "showToggle": {
                "type": "boolean",
                "default": true,
                "description": "Afficher le bouton pour voir le mot de passe"
            },
            "showStrength": {
                "type": "boolean",
                "default": false,
                "description": "Afficher l'indicateur de force"
            },
            "strengthLabels": {
                "type": "object",
                "description": "Labels personnalisés pour les niveaux de force",
                "properties": {
                    "weak": {
                        "type": "string",
                        "default": "Faible"
                    },
                    "fair": {
                        "type": "string",
                        "default": "Moyen"
                    },
                    "good": {
                        "type": "string",
                        "default": "Bon"
                    },
                    "strong": {
                        "type": "string",
                        "default": "Fort"
                    }
                }
            },
            "minLength": {
                "type": "integer",
                "description": "Longueur minimale requise"
            },
            "maxLength": {
                "type": "integer",
                "description": "Longueur maximale"
            },
            "required": {
                "type": "boolean",
                "default": false
            },
            "disabled": {
                "type": "boolean",
                "default": false
            },
            "error": {
                "type": "string",
                "description": "Message d'erreur"
            },
            "hint": {
                "type": "string",
                "description": "Texte d'aide"
            },
            "size": {
                "type": "string",
                "enum": [
                    "sm",
                    "md",
                    "lg"
                ],
                "default": "md"
            },
            "variant": {
                "type": "string",
                "enum": [
                    "default",
                    "filled",
                    "outlined"
                ],
                "default": "default"
            },
            "autocomplete": {
                "type": "string",
                "enum": [
                    "current-password",
                    "new-password",
                    "off"
                ],
                "default": "current-password"
            },
            "className": {
                "type": "string",
                "default": ""
            },
            "id": {
                "type": "string",
                "description": "ID HTML"
            }
        },
        "required": []
    },
    "tags": [
        "ui",
        "primitive",
        "password",
        "input",
        "form",
        "security"
    ],
    "examples": [
        {
            "name": "Password simple",
            "inputs": {
                "name": "password",
                "label": "Mot de passe",
                "placeholder": "Entrez votre mot de passe"
            }
        },
        {
            "name": "Nouveau mot de passe avec force",
            "inputs": {
                "name": "newPassword",
                "label": "Nouveau mot de passe",
                "showStrength": true,
                "autocomplete": "new-password",
                "hint": "Minimum 8 caractères avec majuscules, chiffres et symboles"
            }
        },
        {
            "name": "Password avec erreur",
            "inputs": {
                "name": "password",
                "label": "Mot de passe",
                "error": "Le mot de passe est incorrect"
            }
        }
    ]
}